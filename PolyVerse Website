  <script>
  (function(){
    const banner = document.getElementById('cookieConsentBanner');
    const acceptBtn = document.getElementById('cookieAcceptBtn');
    const cancelBtn = document.getElementById('cookieCancelBtn');
    let hideTimeout = null;

    function showBanner() {
      if (!banner) return;
      banner.style.display = 'flex';
      banner.classList.remove('hide');
      // Force reflow for animation
      void banner.offsetWidth;
      banner.classList.add('show');
      // Hide after 20 seconds if not already hidden
      hideTimeout = setTimeout(hideBanner, 20000);
    }
    function hideBanner() {
      if (!banner) return;
      banner.classList.remove('show');
      banner.classList.add('hide');
      if (hideTimeout) clearTimeout(hideTimeout);
      setTimeout(() => {
        banner.style.display = 'none';
      }, 450);
    }
    // Accept/Cancel click handlers
    if (acceptBtn) acceptBtn.onclick = hideBanner;
    if (cancelBtn) cancelBtn.onclick = hideBanner;

    // Show on load/refresh
    window.addEventListener('DOMContentLoaded', showBanner);
  })();
  </script>
</body>
</html>
