<script type="module">
/* ====== Sample Data ====== */
const models=[
  {id:1,title:'Robot Buddy',price:0,src:'assets/models/model1.fbx',thumb:'https://placehold.co/400x400?text=Robot'},
  {id:2,title:'Cyber Ninja',price:9.99,src:'assets/models/model2.fbx',thumb:'https://placehold.co/400x400?text=Ninja'},
  {id:3,title:'Space Marine',price:14.99,src:'assets/models/model3.fbx',thumb:'https://placehold.co/400x400?text=Marine'},
  {id:4,title:'Low-Poly Knight',price:4.99,src:'assets/models/model4.fbx',thumb:'https://placehold.co/400x400?text=Knight'},
  {id:5,title:'Cartoon Archer',price:0,src:'assets/models/model5.fbx',thumb:'https://placehold.co/400x400?text=Archer'},
  {id:6,title:'Steampunk Bot',price:7.5,src:'assets/models/model6.fbx',thumb:'https://placehold.co/400x400?text=Bot'},
  {id:7,title:'Voxel Mage',price:3.5,src:'assets/models/model7.fbx',thumb:'https://placehold.co/400x400?text=Mage'},
  {id:8,title:'Sci-Fi Soldier',price:0,src:'assets/models/model8.fbx',thumb:'https://placehold.co/400x400?text=Soldier'},
  {id:9,title:'Alien Brute',price:8.75,src:'assets/models/model9.fbx',thumb:'https://placehold.co/400x400?text=Alien'},
  {id:10,title:'Mutant Bug',price:5,src:'assets/models/model10.fbx',thumb:'https://placehold.co/400x400?text=Bug'}
];

/* ====== DOM Hooks ====== */
const gallery=document.getElementById('gallery');
const search=document.getElementById('search');
const themeToggle=document.getElementById('themeToggle');
const cartBtn=document.getElementById('cartBtn');
const loginBtn=document.getElementById('loginBtn');
const cartModal=document.getElementById('cartModal');
const loginModal=document.getElementById('loginModal');
const viewerModal=document.getElementById('viewerModal');
const viewer=document.getElementById('viewer');
const viewerTitle=document.getElementById('viewerTitle');
const addToCartBtn=document.getElementById('addToCart');
const cartItems=document.getElementById('cartItems');
const total=document.getElementById('total');
const cartCount=document.getElementById('cartCount');

/* ====== Render Gallery ====== */
function renderGallery(list){
  gallery.innerHTML='';
  list.forEach(m=>{
    const card=document.createElement('div');
    card.className='card';
    card.innerHTML=`
      <img src="${m.thumb}" alt="">
      <h3>${m.title}</h3>
      <p class="price">${m.price?`$${m.price.toFixed(2)}`:'Free'}</p>
      <button class="btn buy" data-id="${m.id}">Preview</button>`;
    gallery.appendChild(card);
  });
  /* Staggered fade-in */
  [...gallery.children].forEach((el,i)=>{el.style.opacity=0;setTimeout(()=>el.style.transition='opacity .4s ease',50);setTimeout(()=>el.style.opacity=1,100*i)});
}
renderGallery(models);

/* ====== Search Filter ====== */
search.addEventListener('input',e=>{
  const q=e.target.value.toLowerCase();
  renderGallery(models.filter(m=>m.title.toLowerCase().includes(q)));
});

/* ====== Theme Toggle ====== */
const storedTheme=localStorage.getItem('theme')||'light';
document.documentElement.dataset.theme=storedTheme;
themeToggle.textContent=storedTheme==='dark'?'â˜€ï¸':'ðŸŒ™';
themeToggle.addEventListener('click',()=>{
  const t=document.documentElement.dataset.theme==='light'?'dark':'light';
  document.documentElement.dataset.theme=t;
  localStorage.setItem('theme',t);
  themeToggle.textContent=t==='dark'?'â˜€ï¸':'ðŸŒ™';
});

/* ====== Navbar hide/reveal on scroll ====== */
let prevY=window.scrollY;
window.addEventListener('scroll',()=>{
  const nav=document.getElementById('navbar');
  if(window.scrollY<prevY)nav.classList.add('scroll-up'),nav.classList.remove('scroll-down');
  else nav.classList.add('scroll-down'),nav.classList.remove('scroll-up');
  prevY=window.scrollY;
});

/* ====== Cart System ====== */
let cart=JSON.parse(localStorage.getItem('cart')||'[]');
function updateCartUI(){
  cartCount.textContent=cart.length;
  cartItems.innerHTML='';
  let sum=0;
  cart.forEach(item=>{
    const li=document.createElement('li');
    li.textContent=item.title+' â€“ '+(item.price?`$${item.price}`:'Free');
    cartItems.appendChild(li);
    sum+=item.price||0;
  });
  total.textContent='$'+sum.toFixed(2);
  localStorage.setItem('cart',JSON.stringify(cart));
}
updateCartUI();

/* ====== Modal Helpers ====== */
function open(modal){modal.classList.add('active')}
function close(modal){modal.classList.remove('active')}
document.querySelectorAll('[data-close]').forEach(btn=>btn.onclick=()=>close(btn.closest('.modal')));
cartBtn.onclick=()=>open(cartModal);
loginBtn.onclick=()=>open(loginModal);
window.addEventListener('keydown',e=>e.key==='Escape'&&document.querySelectorAll('.modal.active').forEach(close));

/* ====== Gallery Delegation (Preview) ====== */
gallery.addEventListener('click',e=>{
  if(!e.target.matches('.buy'))return;
  const m=models.find(x=>x.id==e.target.dataset.id);
  viewer.src=m.src;viewerTitle.textContent=m.title;
  addToCartBtn.dataset.id=m.id;
  open(viewerModal);
});

/* ====== Add to Cart from Viewer ====== */
addToCartBtn.onclick=()=>{
  const id=addToCartBtn.dataset.id;
  const m=models.find(x=>x.id==id);
  if(!cart.some(c=>c.id==id)){cart.push(m);updateCartUI();}
  close(viewerModal);
};

/* ====== IntersectionObserver for cards (optional extra) ====== */
const io=new IntersectionObserver(entries=>{
  entries.forEach(ent=>ent.isIntersecting&&(ent.target.style.transform='scale(1)',io.unobserve(ent.target)));
},{threshold:.2});
document.querySelectorAll('.card').forEach(c=>{c.style.transform='scale(.8)';io.observe(c)});
</script>
</body>
