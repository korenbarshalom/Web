  <script type="module">
    // === DATA & HOOKS ===
    const models = [
      {id:1,title:'Human Character Base',price:0,src:'assets/models/model1.glb',thumb:'https://img.itch.zone/aW1hZ2UvMzYzMDcyMC8yMTYwNTk3NS5wbmc=/347x500/0EGaXE.png'},
      {id:2,title:'Human Character Base',price:0,src:'assets/models/model2.glb',thumb:'https://img.itch.zone/aW1hZ2UvMzYyNjQzMS8yMTU4MTkwOS5wbmc=/347x500/zwrvpj.png'},
      {id:3,title:'Player Model',price:0,src:'assets/models/model3.glb',thumb:'https://img.itch.zone/aW1hZ2UvMzYyNjI1OC8yMTYwMzg1Mi5wbmc=/347x500/Qsh9nF.png'},
      {id:4,title:'Knight',price:0,src:'assets/models/model4.glb',thumb:'https://placehold.co/400x400?text=Knight'},
      {id:5,title:'Archer',price:0,src:'assets/models/model5.glb',thumb:'https://placehold.co/400x400?text=Archer'},
      {id:6,title:'Steampunk',price:0,src:'assets/models/model6.glb',thumb:'https://placehold.co/400x400?text=Bot'},
      {id:7,title:'Voxel Mage',price:0,src:'assets/models/model7.glb',thumb:'https://placehold.co/400x400?text=Mage'},
      {id:8,title:'Sci-Fi Soldier',price:0,src:'assets/models/model8.glb',thumb:'https://placehold.co/400x400?text=Soldier'},
    ];
    const gallery     = document.getElementById('gallery');
    const heroSearch  = document.getElementById('heroSearch');
    const cartBtn     = document.getElementById('cartBtn');
    const loginBtn    = document.getElementById('loginBtn');
    const cartModal   = document.getElementById('cartModal');
    const loginModal  = document.getElementById('loginModal');
    const viewerModal = document.getElementById('viewerModal');
    const viewer      = document.getElementById('viewer');
    const viewerTitle = document.getElementById('viewerTitle');
    const addToCart   = document.getElementById('addToCart');
    const checkoutBtn = document.getElementById('checkoutBtn');
    const cartItems   = document.getElementById('cartItems');
    const total       = document.getElementById('total');
    const cartCount   = document.getElementById('cartCount');
    const previewsEl  = document.getElementById('previewImages');
    const mainContent = document.getElementById('mainContent');
    const checkoutPage= document.getElementById('checkoutPage');
    const backHome    = document.getElementById('backHome');

    // === CART LOGIC ===
    let cart = [];
    function updateCartUI(){
      cartCount.textContent = cart.length;
      cartItems.innerHTML = '';
      let sum = 0;
      cart.forEach(i =>{
        const li=document.createElement('li');
        li.textContent = `${i.title} ‚Äì ${i.price?`$${i.price}`:'Free'}`;
        cartItems.appendChild(li);
        sum+=i.price||0;
      });
      total.textContent = '$'+sum.toFixed(2);
    }
    updateCartUI();

    // === RENDER GALLERY ===
    function renderGallery(list){
      gallery.innerHTML = '';
      list.forEach(m=>{
        const card=document.createElement('div');
        card.className='card';
        card.innerHTML=`
          <img src="${m.thumb}" data-id="${m.id}">
          <div class="info">
            <h3>${m.title}</h3>
            <p>${m.price?`$${m.price.toFixed(2)}`:'Free'}</p>
          </div>`;
        gallery.appendChild(card);
      });
    }
    renderGallery(models);

    // === SEARCH ===
    heroSearch.addEventListener('input',e=>{
      const q=e.target.value.toLowerCase();
      renderGallery(models.filter(m=>m.title.toLowerCase().includes(q)));
    });

    // === MODALS & VIEWER & CHECKOUT NAV ===
    function open(m){m.classList.add('active')}
    function close(m){m.classList.remove('active')}
    document.querySelectorAll('[data-close]').forEach(b=>b.onclick=()=>close(b.closest('.modal')));
    cartBtn.onclick=()=>open(cartModal);
    loginBtn.onclick=()=>open(loginModal);
    gallery.addEventListener('click',e=>{
      if(e.target.tagName!=='IMG'||!e.target.dataset.id)return;
      const m=models.find(x=>x.id==e.target.dataset.id);
      viewer.src=m.src;
      viewerTitle.textContent=m.title;
      addToCart.dataset.id=m.id;
      previewsEl.innerHTML='';
      if(m.previews) m.previews.forEach(src=>{
        const img=document.createElement('img'); img.src=src; previewsEl.appendChild(img);
      });
      open(viewerModal);
    });
    addToCart.onclick=()=>{ const id=+addToCart.dataset.id; const m=models.find(x=>x.id===id); if(!cart.some(c=>c.id===id)){cart.push(m);updateCartUI()} close(viewerModal); };

    checkoutBtn.onclick=e=>{
      close(cartModal);
      mainContent.style.display='none';
      checkoutPage.style.display='block';
      window.scrollTo(0,0);
    };
    backHome.onclick=e=>{
      checkoutPage.style.display='none';
      mainContent.style.display='block';
      window.scrollTo(0,0);
    };

    // === FAKE CHECKOUT SUBMIT ===
    document.getElementById('checkoutForm').addEventListener('submit',e=>{
      e.preventDefault();
      alert('Redirecting to PayPal‚Ä¶');
      // implement real PayPal redirect here
    });

    // close on ESC
    window.addEventListener('keydown',e=>{ if(e.key==='Escape') document.querySelectorAll('.modal.active').forEach(close); });

  </script>
</body>
