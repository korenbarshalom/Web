  <script>
    // ===== Navbar Links Visibility Management =====
    (function(){
      const navbarLinks = document.querySelector('.navbar-center-links');
      
      function hideNavbarLinks() {
        if(navbarLinks) navbarLinks.style.display = 'none';
      }
      
      function showNavbarLinks() {
        if(navbarLinks) navbarLinks.style.display = '';
      }
      
      // Expose globally for use in other functions
      window.hideNavbarLinks = hideNavbarLinks;
      window.showNavbarLinks = showNavbarLinks;
      
      // Ensure navbar links are visible on page load (home page default)
      showNavbarLinks();
    })();
    
    // ===== About Page SPA Logic =====
    (function(){
      const aboutBackBtn = document.getElementById('aboutBackBtn');
      const aboutNavLink = Array.from(document.querySelectorAll('.nav-link')).find(l => l.textContent.trim() === 'About Us');
      const homeNavLink = Array.from(document.querySelectorAll('.nav-link')).find(l => l.textContent.trim() === 'Home');
      const charactersNavLink = Array.from(document.querySelectorAll('.nav-link')).find(l => l.textContent.trim() === 'Characters');
      const contactNavLink = Array.from(document.querySelectorAll('.nav-link')).find(l => l.textContent.trim() === 'Contact Us');
      const footerSection = document.getElementById('contact-section');
      
      function hideAllPages() {
        // Hide profile page (if visible) to avoid stacking
        const profilePage = document.getElementById('profilePage');
        if(profilePage) {
          profilePage.classList.remove('active');
          profilePage.style.display = 'none';
        }

        // Hide main content pages
        const mainContent = document.getElementById('mainContent');
        if(mainContent) mainContent.style.display = 'none';
        
        // Hide model and checkout pages
        const modelPage = document.getElementById('modelPage');
        if(modelPage) modelPage.style.display = 'none';
        const checkoutPage = document.getElementById('checkoutPage');
        if(checkoutPage) checkoutPage.style.display = 'none';
        
        // Hide personal pages
        const likesListPage = document.getElementById('likesListPage');
        if(likesListPage) {
          likesListPage.classList.remove('active');
          likesListPage.style.display = 'none';
        }
        const purchasedListPage = document.getElementById('purchasedListPage');
        if(purchasedListPage) {
          purchasedListPage.classList.remove('active');
          purchasedListPage.style.display = 'none';
        }
        
        // Hide search elements
        const topSearchbar = document.getElementById('top-searchbar');
        if(topSearchbar) topSearchbar.style.display = 'none';
        const heroSearch = document.getElementById('heroSearch');
        if(heroSearch) heroSearch.parentElement.classList.add('hide');
        // Hide Terms section if visible
        const termsSection = document.getElementById('terms-section');
        if(termsSection) termsSection.style.display = 'none';
        document.body.classList.remove('terms-active');
        // Hide About section if visible
        const aboutSection = document.getElementById('about-section');
        if(aboutSection) aboutSection.style.display = 'none';
        document.body.classList.remove('about-active');
      }
      
      function showAbout(e){
        if(e) e.preventDefault();
        hideAllPages(); // Hide all other pages first
        document.body.classList.add('about-active');
        window.showNavbarLinks(); // Keep navbar links visible on About page
        window.scrollTo(0,0);
        // Show About section
        const aboutSection = document.getElementById('about-section');
        if(aboutSection) aboutSection.style.display = '';
      }
      
      function goHome(e){
        if(e) e.preventDefault();
        document.body.classList.remove('about-active');
        // Show main content and reset to home state
        const mainContent = document.getElementById('mainContent');
        if(mainContent) mainContent.style.display = 'block';
        const heroSearch = document.getElementById('heroSearch');
        if(heroSearch) heroSearch.parentElement.classList.remove('hide');
        const homepageBanner = document.getElementById('homepage-banner');
        if(homepageBanner) homepageBanner.style.display = '';
        // Hide Terms section if visible
        const termsSection = document.getElementById('terms-section');
        if(termsSection) termsSection.style.display = 'none';
        document.body.classList.remove('terms-active');
        // Hide About section if visible
        const aboutSection = document.getElementById('about-section');
        if(aboutSection) aboutSection.style.display = 'none';
        window.showNavbarLinks(); // Ensure navbar links are visible on home
        window.scrollTo(0,0);
      }
      
      if(aboutNavLink) aboutNavLink.addEventListener('click', showAbout);
      if(aboutBackBtn) aboutBackBtn.addEventListener('click', goHome);
      if(homeNavLink) homeNavLink.addEventListener('click', goHome);
      if(charactersNavLink) charactersNavLink.addEventListener('click', function(e) { e.preventDefault(); });
      if(contactNavLink) contactNavLink.addEventListener('click', function(e) {
        e.preventDefault();
        // Always hide all internal/account/special sections before showing home/footer
        const modelPage = document.getElementById('modelPage');
        if(modelPage) modelPage.style.display = 'none';
        const checkoutPage = document.getElementById('checkoutPage');
        if(checkoutPage) checkoutPage.style.display = 'none';
        const likesListPage = document.getElementById('likesListPage');
        if(likesListPage) { likesListPage.classList.remove('active'); likesListPage.style.display = 'none'; }
        const purchasedListPage = document.getElementById('purchasedListPage');
        if(purchasedListPage) { purchasedListPage.classList.remove('active'); purchasedListPage.style.display = 'none'; }
        const profilePage = document.getElementById('profilePage');
        if(profilePage) { profilePage.classList.remove('active'); profilePage.style.display = 'none'; }
        // Hide About and Terms sections if visible
        const aboutSection = document.getElementById('about-section');
        if(aboutSection) aboutSection.style.display = 'none';
        document.body.classList.remove('about-active');
        const termsSection = document.getElementById('terms-section');
        if(termsSection) termsSection.style.display = 'none';
        document.body.classList.remove('terms-active');
        // Show homepage and footer
        const mainContent = document.getElementById('mainContent');
        if(mainContent) mainContent.style.display = 'block';
        const homepageBanner = document.getElementById('homepage-banner');
        if(homepageBanner) homepageBanner.style.display = '';
        const heroSearch = document.getElementById('heroSearch');
        if(heroSearch) heroSearch.parentElement.classList.remove('hide');
        const topSearchbar = document.getElementById('top-searchbar');
        if(topSearchbar) topSearchbar.style.display = 'none';
        window.showNavbarLinks && window.showNavbarLinks();
        // Scroll to footer
        if (footerSection) {
          footerSection.scrollIntoView({ behavior: 'smooth' });
        }
      });
      // Ensure Home page is default on hard refresh
      document.body.classList.remove('about-active');
    })();
  </script>

