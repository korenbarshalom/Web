    #terms-section { padding:2rem 1rem; }
    #terms-section .terms-text h1 { font-size:2.5rem; }
    #terms-section .terms-text h1::before { font-size:1.5rem; left: -1rem; top:0.3rem; }
  }
  /* --- Smooth fade/slide-in transition for Terms page --- */
  #terms-section {
    opacity: 0;
    transform: translateY(24px);
    transition: opacity 0.45s cubic-bezier(.4,.01,.22,1), transform 0.45s cubic-bezier(.4,.01,.22,1);
  }
  body.terms-active #terms-section {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.45s cubic-bezier(.4,.01,.22,1), transform 0.45s cubic-bezier(.4,.01,.22,1);
  }
  </style>
  <script>
  (function(){
    const termsNavLink = Array.from(document.querySelectorAll('.nav-link')).find(l => l.textContent.trim() === 'Terms');
    const termsBackBtn = document.getElementById('termsBackBtn');
    function hideAllPages() {
      // Hide profile page (if visible) to avoid stacking when navigating to Terms
      const profilePage = document.getElementById('profilePage');
      if(profilePage) {
        profilePage.classList.remove('active');
        profilePage.style.display = 'none';
      }

      const mainContent = document.getElementById('mainContent');
      if(mainContent) mainContent.style.display = 'none';
      const modelPage = document.getElementById('modelPage');
      if(modelPage) modelPage.style.display = 'none';
      const checkoutPage = document.getElementById('checkoutPage');
      if(checkoutPage) checkoutPage.style.display = 'none';
      const likesListPage = document.getElementById('likesListPage');
      if(likesListPage) {
        likesListPage.classList.remove('active');
        likesListPage.style.display = 'none';
      }
      const purchasedListPage = document.getElementById('purchasedListPage');
      if(purchasedListPage) {
        purchasedListPage.classList.remove('active');
        purchasedListPage.style.display = 'none';
      }
      const topSearchbar = document.getElementById('top-searchbar');
      if(topSearchbar) topSearchbar.style.display = 'none';
      const heroSearch = document.getElementById('heroSearch');
      if(heroSearch) heroSearch.parentElement.classList.add('hide');
    }
    function showTerms(e){
      if(e) e.preventDefault();
      hideAllPages();
      // Prepare for transition
      const termsSection = document.getElementById('terms-section');
      if (termsSection) {
        termsSection.style.display = 'block';
        termsSection.style.opacity = '0';
        termsSection.style.transform = 'translateY(24px)';
      }
      document.body.classList.add('terms-active');
      window.showNavbarLinks();
      window.scrollTo(0,0);
      location.hash = '/terms';
      // Trigger transition after a short delay to ensure style is applied
      setTimeout(() => {
        if (termsSection) {
          termsSection.style.opacity = '1';
          termsSection.style.transform = 'translateY(0)';
        }
      }, 10);
      // Hide About section if visible
      const aboutSection = document.getElementById('about-section');
      if(aboutSection) aboutSection.style.display = 'none';
      document.body.classList.remove('about-active');
    }
    function goHome(e){
      if(e) e.preventDefault();
      document.body.classList.remove('terms-active');
      const mainContent = document.getElementById('mainContent');
      if(mainContent) mainContent.style.display = 'block';
      const homepageBanner = document.getElementById('homepage-banner');
      if(homepageBanner) homepageBanner.style.display = '';
      const heroSearch = document.getElementById('heroSearch');
      if(heroSearch) heroSearch.parentElement.classList.remove('hide');
      // Hide Terms section if visible
      const termsSection = document.getElementById('terms-section');
      if(termsSection) termsSection.style.display = 'none';
      window.showNavbarLinks();
      window.scrollTo(0,0);
      location.hash = '';
    }
    if(termsNavLink) termsNavLink.addEventListener('click', showTerms);
    if(termsBackBtn) termsBackBtn.addEventListener('click', goHome);
    window.addEventListener('hashchange', function() {
      if (location.hash === '#/terms') {
        showTerms();
      } else {
        goHome();
      }
    });
    // --- FORCE HOME VIEW ON PAGE LOAD (fix for refresh bug) ---
    window.addEventListener('DOMContentLoaded', function() {
      // Always reset to Home view on load
      document.body.classList.remove('terms-active');
      const mainContent = document.getElementById('mainContent');
      if(mainContent) mainContent.style.display = 'block';
      const homepageBanner = document.getElementById('homepage-banner');
      if(homepageBanner) homepageBanner.style.display = '';
      const heroSearch = document.getElementById('heroSearch');
      if(heroSearch) heroSearch.parentElement.classList.remove('hide');
      // Hide Terms section if visible
      const termsSection = document.getElementById('terms-section');
      if(termsSection) termsSection.style.display = 'none';
      window.showNavbarLinks();
      window.scrollTo(0,0);
      location.hash = '';
    });
    // Remove auto-show Terms on load
    // if (location.hash === '#/terms') {
    //   showTerms();
    // }
  })();
  </script>

