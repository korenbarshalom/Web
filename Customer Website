          desc: "Spacious and timeless black tote bag, crafted from premium leather.",
          gallery: '["https://media.istockphoto.com/id/1365118618/photo/blue-fashion-purse-handbag-on-white-background-isolated.jpg?s=612x612&w=0&k=20&c=VNszfC0cxenqZGhjlr3gqqvzHWREuhdY_H3CKF1B38g="]',
          colors: '["#18141c","#e5e5e5","#bfa05a"]',
          sizes: '["Medium","Large"]',
          category: "Bags"
        },
        {
          title: "Pastel Blue Satchel",
          price: "$219",
          img: "https://img.freepik.com/premium-photo/women-leather-bag-isolated-white-background-side-view-luxury-genuine-full-grain-leather-lady_709135-96.jpg",
          desc: "Soft pastel blue satchel with gold hardware and adjustable strap.",
          gallery: '["https://img.freepik.com/premium-photo/women-leather-bag-isolated-white-background-side-view-luxury-genuine-full-grain-leather-lady_709135-96.jpg"]',
          colors: '["#b6d6e7","#e5e5e5","#bfa05a"]',
          sizes: '["Small","Medium"]',
          category: "Bags"
        }
      ];
      // Combine products, ensuring no duplicates by title
      const products = (dataOverride || getAllProductData());
      const allTitles = new Set(products.map(p => p.title));
      alwaysInclude.forEach(p => {
        if (!allTitles.has(p.title)) products.push(p);
      });
      allProductsGrid.innerHTML = '';
      let filtered = products;
      if (categoryFilter) {
        filtered = products.filter(p => (p.category || '').toLowerCase() === categoryFilter.toLowerCase());
      }
      filtered.forEach(product => {
        const card = document.createElement('div');
        card.className = 'product-card';
        card.setAttribute('data-title', product.title || '');
        card.setAttribute('data-price', product.price || '');
        card.setAttribute('data-img', product.img || '');
        card.setAttribute('data-desc', product.desc || '');
        card.setAttribute('data-gallery', product.gallery || `["${product.img || ''}"]`);
        card.setAttribute('data-colors', product.colors || '[]');
        card.setAttribute('data-sizes', product.sizes || '[]');
        card.setAttribute('data-category', product.category || '');
        card.innerHTML = `
          <img src="${product.img}" alt="${product.title}">
          <h4>${product.title}</h4>
          <span>${product.price}</span>
        `;
        card.style.cursor = 'pointer';
        card.addEventListener('click', function() {
          allProductsSection.style.display = 'none';
          productDetailSection.style.display = 'block';
          renderProductDetail(card);
          window.scrollTo({top:0,behavior:'smooth'});
          cameFromAllProducts = true;
        });
        allProductsGrid.appendChild(card);
      });
      if (filtered.length === 0) {
        allProductsGrid.innerHTML = '<div style="grid-column:1/-1;text-align:center;font-size:1.1rem;color:#b86fa7;padding:2em 0;">No products found in this category.</div>';
      }
    }
    // Category card click logic
    document.querySelectorAll('.category-card').forEach(card => {
      card.style.cursor = 'pointer';
      card.addEventListener('click', function() {
        const category = card.getAttribute('data-category');
        homepageContent.style.display = 'none';
        allProductsSection.style.display = 'flex';
        // Clear the grid before rendering new products to prevent duplication
        allProductsGrid.innerHTML = '';
        renderAllProductsGrid(category);
        window.scrollTo({top:0,behavior:'smooth'});
      });
    });
    allProductsBack.addEventListener('click', function() {
      allProductsSection.style.display = 'none';
      homepageContent.style.display = '';
      window.scrollTo({top:0,behavior:'smooth'});
    });
    // Home link in navbar returns to homepage view from any section
    document.querySelectorAll('nav a').forEach(link => {
      if (link.textContent.trim().toLowerCase() === 'home') {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          document.getElementById('product-detail-section').style.display = 'none';
          document.getElementById('all-products-section').style.display = 'none';
          document.getElementById('homepage-content').style.display = '';
          window.scrollTo({top:0,behavior:'smooth'});
          // --- FIX: Hide checkout section when navigating Home from navbar ---
          // This ensures checkout is hidden regardless of which step is visible
          var checkoutSection = document.getElementById('checkout-section');
          if (checkoutSection) checkoutSection.style.display = 'none';
        });
      }
    });
    // --- CART LOGIC REMOVED - NOW HANDLED BY cart.js ---
    // All cart functionality is now managed by the modular cart.js file
    // This ensures consistent behavior for both logged-in and guest users

    // Checkout overlay close logic
    const checkoutSection = document.getElementById('checkout-section');
    const checkoutCloseBtn = document.getElementById('checkout-close-btn');
    checkoutCloseBtn.addEventListener('click', function() {
      checkoutSection.style.display = 'none';
      document.body.style.overflow = '';
      homepageContent.style.display = '';
      window.scrollTo({top:0,behavior:'smooth'});
    });
    // Render order summary for checkout 2col
    function renderCheckoutOrderSummary2col() {
      const cart = getCart();
      const itemsDiv = document.getElementById('checkout-order-summary-items');
      const subtotalDiv = document.getElementById('checkout-subtotal');
      const totalDiv = document.getElementById('checkout-total');
      if (!cart || cart.length === 0) {
        itemsDiv.innerHTML = `<div style='text-align:center;color:#b86fa7;padding:1.2em 0;'>Your cart is empty.</div>`;
        subtotalDiv.textContent = '';
        totalDiv.textContent = '';
        return;
      }
      let html = '';
      let total = 0;
      cart.forEach(item => {
        const price = parseFloat(item.price.replace(/[^\d.]/g, '')) || 0;
        total += price;
        html += `<div class='order-summary-item' style='display:flex;align-items:center;gap:0.7em;background:#fff;border-radius:10px;padding:0.5em 0.7em;position:relative;margin-bottom:0.5em;border:1.5px solid var(--accent-pink-dark);'>
          <img class='order-summary-item-img' src='${item.img}' alt='${item.title}' style='width:44px;height:44px;object-fit:contain;border-radius:8px;background:#fff;border:1.5px solid var(--accent-pink-dark);'>
          <div class='order-summary-item-info' style='flex:1;display:flex;flex-direction:column;gap:0.1em;'>
            <div class='order-summary-item-title' style='font-size:1.05rem;color:var(--accent-pink-dark);font-weight:700;font-family:Playfair Display,serif;'>${item.title}</div>
            <div class='order-summary-item-meta' style='font-size:0.97rem;color:var(--text-dark);opacity:0.85;'>${item.price}` +
              (item.size ? ` &middot; <span>${item.size}</span>` : '') +
              (item.color ? ` &middot; <span style='display:inline-block;width:1em;height:1em;border-radius:50%;background:${item.color};border:1.5px solid #bfa05a;margin-left:0.3em;vertical-align:middle;'></span>` : '') +
            `</div>
          </div>
        </div>`;
      });
      itemsDiv.innerHTML = html;
      subtotalDiv.textContent = `$${total.toFixed(2)}`;
      totalDiv.textContent = `$${total.toFixed(2)}`;
    }
    // Checkout step logic 2col
    const checkoutContinueBtn = document.getElementById('checkout-continue-btn');
    const checkoutForm2col = document.getElementById('checkout-form');
    const checkoutPaymentBlock = document.getElementById('checkout-payment-block');
    const checkoutConfirmationBlock = document.getElementById('checkout-confirmation-block');
    checkoutContinueBtn.addEventListener('click', function() {
      // Validate required fields
      if (!document.getElementById('checkout-email').value.trim() ||
          !document.getElementById('checkout-address').value.trim() ||
          !document.getElementById('checkout-phone').value.trim()) {
        alert('Please fill in all required fields.');
        return;
      }
      checkoutForm2col.style.display = 'none';
      checkoutPaymentBlock.style.display = 'block';
    });
    // Payment step logic 2col
    const checkoutPaymentForm2col = document.getElementById('checkout-payment-form');
    checkoutPaymentForm2col.addEventListener('submit', function(e) {
      e.preventDefault();
      if (!document.getElementById('checkout-payment-method').value) {
        alert('Please select a payment method.');
        return;
      }
      setTimeout(() => {
        setCart([]);
        checkoutPaymentBlock.style.display = 'none';
        checkoutConfirmationBlock.style.display = 'block';
        checkoutConfirmationBlock.innerHTML = `<i class='fa fa-check-circle' style='font-size:2.2rem;color:var(--accent-gold);'></i><br>Thank you for your order!<br>Your payment was successful.`;
        updateCartBadge();
      }, 900);
    });
    // Hide checkout section and return to homepage when confirmation is clicked (optional)
    checkoutConfirmationBlock.addEventListener('click', function() {
      document.getElementById('checkout-section').style.display = 'none';
      homepageContent.style.display = '';
      window.scrollTo({top:0,behavior:'smooth'});
    });
  </script>
  <!-- === ANIMATION & INTERACTION ENHANCEMENTS CONTINUED === -->
  <script>
  // === PAGE LOAD ANIMATION ===
  document.body.classList.add('sb-fadein');
  window.addEventListener('DOMContentLoaded', function() {
    setTimeout(function() {
      document.body.classList.add('sb-loaded');
    }, 80);
  });
  // === SECTION/CONTENT ANIMATIONS ===
  function sbInViewObserver(selector, className = 'sb-inview', rootMargin = '0px 0px -10% 0px') {
    const els = document.querySelectorAll(selector);
    if (!('IntersectionObserver' in window)) {
      els.forEach(el => el.classList.add(className));
      return;
    }
    const obs = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add(className);
          obs.unobserve(entry.target);
        }
      });
    }, { rootMargin });
    els.forEach(el => obs.observe(el));
  }
  window.addEventListener('DOMContentLoaded', function() {
    sbInViewObserver('.navbar');
    sbInViewObserver('.hero');
    sbInViewObserver('.categories');
    sbInViewObserver('.featured');
    sbInViewObserver('footer');
    sbInViewObserver('.footer-contact-minimal');
    sbInViewObserver('.category-card');
    sbInViewObserver('.product-card');
    sbInViewObserver('.info-block');
    sbInViewObserver('.checkout-block');
    sbInViewObserver('.checkout-summary-block');
    sbInViewObserver('.checkout-payment-block');
    sbInViewObserver('.checkout-confirmation-block');
    sbInViewObserver('#all-products-grid .product-card');
    sbInViewObserver('#checkout-section');
    sbInViewObserver('#product-detail-section');
    sbInViewObserver('#all-products-section');
    // --- ENHANCED: About section and Why Shop With Us cards ---
    sbInViewObserver('.about-section');
    sbInViewObserver('.why-feature');
  });
  // === DYNAMICALLY ADD ANIMATION CLASSES ON SECTION SHOW ===
  function sbShowSectionWithAnim(sectionId) {
    var el = document.getElementById(sectionId);
    if (el) {
      el.classList.remove('sb-inview');
      setTimeout(function() { el.classList.add('sb-inview'); }, 10);
    }
  }
  // --- Patch navigation to use smooth transitions ---
  (function() {
    var homepageContent = document.getElementById('homepage-content');
    var productDetailSection = document.getElementById('product-detail-section');
    var allProductsSection = document.getElementById('all-products-section');
    var checkoutSection = document.getElementById('checkout-section');
    // Home link
    document.querySelectorAll('nav a').forEach(link => {
      if (link.textContent.trim().toLowerCase() === 'home') {
        link.addEventListener('click', function(e) {
          setTimeout(function() {
            sbShowSectionWithAnim('homepage-content');
          }, 30);
        });
      }
    });
    // Product card click
    document.querySelectorAll('.product-card').forEach(card => {
      card.addEventListener('click', function() {
        setTimeout(function() {
          sbShowSectionWithAnim('product-detail-section');
        }, 30);
      });
    });
    // Category card click
    document.querySelectorAll('.category-card').forEach(card => {
      card.addEventListener('click', function() {
        setTimeout(function() {
          sbShowSectionWithAnim('all-products-section');
        }, 30);
      });
    });
    // Shop now btn
    var shopNowBtn = document.getElementById('shop-now-btn');
    if (shopNowBtn) {
      shopNowBtn.addEventListener('click', function() {
        setTimeout(function() {
          sbShowSectionWithAnim('all-products-section');
        }, 30);
      });
    }
    // All products back
    var allProductsBack = document.getElementById('all-products-back');
    if (allProductsBack) {
      allProductsBack.addEventListener('click', function() {
        setTimeout(function() {
          sbShowSectionWithAnim('homepage-content');
        }, 30);
      });
    }
    // Product detail back
    var backToHomeBtn = document.getElementById('back-to-home');
    if (backToHomeBtn) {
      backToHomeBtn.addEventListener('click', function() {
        setTimeout(function() {
          sbShowSectionWithAnim('homepage-content');
        }, 30);
      });
    }
    // Mini cart checkout
    var miniCartPanel = document.getElementById('mini-cart-panel');
    if (miniCartPanel) {
      miniCartPanel.addEventListener('click', function(e) {
        if (e.target.classList.contains('mini-cart-checkout-btn')) {
          setTimeout(function() {
            sbShowSectionWithAnim('checkout-section');
          }, 30);
        }
      });
    }
    // Checkout confirmation click
    var checkoutConfirmationBlock = document.getElementById('checkout-confirmation-block');
    if (checkoutConfirmationBlock) {
      checkoutConfirmationBlock.addEventListener('click', function() {
        setTimeout(function() {
          sbShowSectionWithAnim('homepage-content');
        }, 30);
      });
    }
  })();
  // === Animate Cart Badge on Add ===
  (function() {
    var cartBadge = document.getElementById('cart-count-badge');
    var addToCartBtn = document.getElementById('add-to-cart-btn');
    if (addToCartBtn) {
      addToCartBtn.addEventListener('click', function() {
        if (cartBadge) {
          cartBadge.classList.remove('sb-pulse');
          void cartBadge.offsetWidth;
          cartBadge.classList.add('sb-pulse');
          setTimeout(function() { cartBadge.classList.remove('sb-pulse'); }, 700);
        }
      });
    }
  })();
  // === Animate Modal Divider on Show ===
  (function() {
    var modal = document.getElementById('login-modal');
    if (modal) {
      modal.addEventListener('transitionend', function() {
        var dividers = modal.querySelectorAll('.modal-divider');
        dividers.forEach(function(div) {
          div.classList.add('sb-inview');
        });
      });
    }
  })();
  // === Animate Info Blocks on Product Detail Show ===
  (function() {
    var productDetailSection = document.getElementById('product-detail-section');
    if (productDetailSection) {
      productDetailSection.addEventListener('transitionend', function() {
        var blocks = productDetailSection.querySelectorAll('.info-block');
        blocks.forEach(function(b) { b.classList.add('sb-inview'); });
      });
    }
  })();
  // === Animate Checkout Blocks on Show ===
  (function() {
    var checkoutSection = document.getElementById('checkout-section');
    if (checkoutSection) {
      checkoutSection.addEventListener('transitionend', function() {
        var blocks = checkoutSection.querySelectorAll('.checkout-block, .checkout-summary-block, .checkout-payment-block, .checkout-confirmation-block');
        blocks.forEach(function(b) { b.classList.add('sb-inview'); });
      });
    }
  })();
  // === Animate All Products Cards on Show ===
  (function() {
    var allProductsSection = document.getElementById('all-products-section');
    if (allProductsSection) {
      allProductsSection.addEventListener('transitionend', function() {
        var cards = allProductsSection.querySelectorAll('.product-card');
        cards.forEach(function(c) { c.classList.add('sb-inview'); });
      });
    }
  })();
  // === Animate Modal Content on Show ===
  (function() {
    var modal = document.getElementById('login-modal');
    if (modal) {
      modal.addEventListener('transitionend', function() {
        var content = modal.querySelector('.modal-content');
        if (content) content.classList.add('sb-inview');
      });
    }
  })();
  // === Animate Product Details Modal on Show ===
  (function() {
    var pdModal = document.getElementById('product-details-modal');
    if (pdModal) {
      pdModal.addEventListener('transitionend', function() {
        var content = pdModal.querySelector('.product-details-modal-content');
        if (content) content.classList.add('sb-inview');
      });
    }
  })();
  // === Animate Footer on Show ===
  (function() {
    var footer = document.querySelector('footer');
    if (footer) {
      window.addEventListener('DOMContentLoaded', function() {
        setTimeout(function() { footer.classList.add('sb-inview'); }, 600);
      });
    }
  })();
  // === Animate Hero on Show ===
  (function() {
    var hero = document.querySelector('.hero');
    if (hero) {
      window.addEventListener('DOMContentLoaded', function() {
        setTimeout(function() { hero.classList.add('sb-inview'); }, 200);
      });
    }
  })();
  // === Animate Navbar on Show ===
  (function() {
    var navbar = document.querySelector('.navbar');
    if (navbar) {
      window.addEventListener('DOMContentLoaded', function() {
        setTimeout(function() { navbar.classList.add('sb-inview'); }, 100);
      });
    }
  })();
  // === Animate Categories and Featured on Show ===
  (function() {
    var categories = document.querySelector('.categories');
    var featured = document.querySelector('.featured');
    if (categories) {
      window.addEventListener('DOMContentLoaded', function() {
        setTimeout(function() { categories.classList.add('sb-inview'); }, 300);
      });
    }
    if (featured) {
      window.addEventListener('DOMContentLoaded', function() {
        setTimeout(function() { featured.classList.add('sb-inview'); }, 400);
      });
    }
  })();
  // === Animate Category Cards and Product Cards on Show ===
  (function() {
    var catCards = document.querySelectorAll('.category-card');
    var prodCards = document.querySelectorAll('.product-card');
    window.addEventListener('DOMContentLoaded', function() {
      catCards.forEach(function(card, i) {
        setTimeout(function() { card.classList.add('sb-inview'); }, 500 + i * 120);
      });
      prodCards.forEach(function(card, i) {
        setTimeout(function() { card.classList.add('sb-inview'); }, 800 + i * 120);
      });
    });
  })();
  // === Animate Info Blocks on Show ===
  (function() {
    var infoBlocks = document.querySelectorAll('.info-block');
    window.addEventListener('DOMContentLoaded', function() {
      infoBlocks.forEach(function(block, i) {
