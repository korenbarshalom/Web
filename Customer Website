    let perfectSetsIndex = 0;
    function getPerfectSetsVisibleCount() {
      if (window.innerWidth <= 700) return 2;
      return 4;
    }
    function renderPerfectSetsCarousel(fadeDir) {
      const visibleCount = getPerfectSetsVisibleCount();
      perfectSetsCarousel.classList.add('slider-anim');
      if (fadeDir) {
        perfectSetsCarousel.classList.remove('fade-in');
        perfectSetsCarousel.classList.add('fade-out');
      }
      setTimeout(() => {
        perfectSetsCarousel.innerHTML = '';
        for (let i = 0; i < visibleCount; i++) {
          const idx = (perfectSetsIndex + i) % perfectSetsData.length;
          const product = perfectSetsData[idx];
          const card = document.createElement('div');
          card.className = 'product-card';
          card.setAttribute('data-title', product.title);
          card.setAttribute('data-price', product.price);
          card.setAttribute('data-img', product.img);
          card.setAttribute('data-desc', product.desc || '');
          card.setAttribute('data-gallery', product.gallery || '[]');
          card.setAttribute('data-colors', product.colors || '[]');
          card.setAttribute('data-sizes', product.sizes || '[]');
          card.setAttribute('data-category', product.category || '');
          card.innerHTML = `
            <img src="${product.img}" alt="${product.title}">
            <h4>${product.title}</h4>
            <span>${product.price}</span>
            <div class="lux-glow"></div><div class="lux-shadow"></div><div class="lux-border"></div><div class="lux-light"></div><div class="lux-tilt"></div>
          `;
          card.style.cursor = 'pointer';
          card.addEventListener('click', function() {
            // Optionally, show a modal or detail (not implemented for demo)
          });
          perfectSetsCarousel.appendChild(card);
        }
        setTimeout(() => {
          perfectSetsCarousel.classList.remove('fade-out');
          perfectSetsCarousel.classList.add('fade-in');
          perfectSetsCarousel.querySelectorAll('.product-card').forEach((c, i) => {
            c.classList.add('sb-inview');
          });
        }, 10);
      }, fadeDir ? 450 : 0);
    }
    function scrollPerfectSets(dir) {
      const visibleCount = getPerfectSetsVisibleCount();
      if (dir === 'left') {
        perfectSetsIndex = (perfectSetsIndex - visibleCount + perfectSetsData.length) % perfectSetsData.length;
      } else {
        perfectSetsIndex = (perfectSetsIndex + visibleCount) % perfectSetsData.length;
      }
      renderPerfectSetsCarousel('fade');
    }
    perfectSetsLeft.addEventListener('click', function() { scrollPerfectSets('left'); });
    perfectSetsRight.addEventListener('click', function() { scrollPerfectSets('right'); });
    window.addEventListener('resize', function() { renderPerfectSetsCarousel(); });
    renderPerfectSetsCarousel();
  </script>
  <script>
    // === OUR MOST LOVED ITEMS CAROUSEL FUNCTIONALITY ===
    (function() {
      const featuredWrap = document.querySelector('.featured-carousel-wrap');
      const featuredGrid = featuredWrap ? featuredWrap.querySelector('.products-grid') : null;
      const leftBtn = document.getElementById('featured-left');
      const rightBtn = document.getElementById('featured-right');
      if (!featuredGrid || !leftBtn || !rightBtn) return;
      const originalCards = Array.from(featuredGrid.children);
      let startIdx = 0;
      function getFeaturedVisibleCount() {
        if (window.innerWidth <= 700) return 2;
        return 4;
      }
      function renderFeaturedCarousel(fadeDir) {
        const visibleCount = getFeaturedVisibleCount();
        featuredGrid.classList.add('slider-anim');
        if (fadeDir) {
          featuredGrid.classList.remove('fade-in');
          featuredGrid.classList.add('fade-out');
        }
        setTimeout(() => {
          featuredGrid.innerHTML = '';
          for (let i = 0; i < visibleCount; i++) {
            const idx = (startIdx + i) % originalCards.length;
            featuredGrid.appendChild(originalCards[idx].cloneNode(true));
          }
          setTimeout(() => {
            featuredGrid.classList.remove('fade-out');
            featuredGrid.classList.add('fade-in');
            featuredGrid.querySelectorAll('.product-card').forEach((c, i) => {
              c.classList.add('sb-inview');
            });
          }, 10);
        }, fadeDir ? 450 : 0);
      }
      function scrollFeatured(dir) {
        const visibleCount = getFeaturedVisibleCount();
        if (dir === 'left') {
          startIdx = (startIdx - visibleCount + originalCards.length) % originalCards.length;
        } else {
          startIdx = (startIdx + visibleCount) % originalCards.length;
        }
        renderFeaturedCarousel('fade');
      }
      leftBtn.addEventListener('click', function() { scrollFeatured('left'); });
      rightBtn.addEventListener('click', function() { scrollFeatured('right'); });
      window.addEventListener('resize', function() { renderFeaturedCarousel(); });
      renderFeaturedCarousel();
    })();
  </script>
  <script>
    // === ENABLE PRODUCT CARD CLICK ON HOMEPAGE CAROUSELS ===
    (function() {
      // Helper to delegate click to product detail logic
      function handleProductCardClick(card) {
        var homepageContent = document.getElementById('homepage-content');
        var productDetailSection = document.getElementById('product-detail-section');
        if (typeof renderProductDetail === 'function') {
          homepageContent.style.display = 'none';
          productDetailSection.style.display = 'block';
          renderProductDetail(card);
          window.scrollTo({top:0,behavior:'smooth'});
        }
      }
      // For static (non-carousel) product cards
      document.querySelectorAll('.featured .product-card, #perfect-sets-carousel .product-card').forEach(function(card) {
        card.style.cursor = 'pointer';
        card.addEventListener('click', function() {
          handleProductCardClick(card);
        });
      });
      // For dynamically rendered carousel cards (after arrow navigation)
      // MutationObserver for featured
      var featuredGrid = document.querySelector('.featured .products-grid');
      if (featuredGrid) {
        new MutationObserver(function() {
          featuredGrid.querySelectorAll('.product-card').forEach(function(card) {
            card.style.cursor = 'pointer';
            card.onclick = function() { handleProductCardClick(card); };
          });
        }).observe(featuredGrid, {childList:true});
      }
      // MutationObserver for perfect sets
      var perfectSetsCarousel = document.getElementById('perfect-sets-carousel');
      if (perfectSetsCarousel) {
        new MutationObserver(function() {
          perfectSetsCarousel.querySelectorAll('.product-card').forEach(function(card) {
            card.style.cursor = 'pointer';
            card.onclick = function() { handleProductCardClick(card); };
          });
        }).observe(perfectSetsCarousel, {childList:true});
      }
    })();
  </script>
  <script>
    // === NAVBAR CATEGORY LINKS CLICK LOGIC ===
    document.querySelectorAll('nav a').forEach(link => {
      const text = link.textContent.trim().toLowerCase();
      if (["jewelry","bags","shoes"].includes(text)) {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          homepageContent.style.display = 'none';
          allProductsSection.style.display = 'flex';
          allProductsGrid.innerHTML = '';
          // Capitalize first letter for category match
          const category = text.charAt(0).toUpperCase() + text.slice(1);
          renderAllProductsGrid(category);
          window.scrollTo({top:0,behavior:'smooth'});
          // Ensure product cards animate in immediately (fix for navbar category click)
          setTimeout(function() {
            allProductsSection.classList.add('sb-inview');
            allProductsGrid.querySelectorAll('.product-card').forEach(function(card, i) {
              card.classList.add('sb-inview');
            });
          }, 30);
        });
      }
    });
    // === ABOUT US & CONTACT US SMOOTH SCROLL ===
    document.getElementById('about-us-link').addEventListener('click', function(e) {
      e.preventDefault();
      // Show homepage if not visible
      homepageContent.style.display = '';
      allProductsSection.style.display = 'none';
      productDetailSection.style.display = 'none';
      checkoutSection && (checkoutSection.style.display = 'none');
      likedProductsSection && (likedProductsSection.style.display = 'none');
      // Scroll to About section
      setTimeout(function() {
        const aboutSection = document.querySelector('.about-section');
        if (aboutSection) {
          aboutSection.scrollIntoView({behavior:'smooth', block:'start'});
          aboutSection.classList.add('sb-inview');
        }
      }, 30);
    });
    document.getElementById('contact-us-link').addEventListener('click', function(e) {
      e.preventDefault();
      // Show homepage if not visible
      homepageContent.style.display = '';
      allProductsSection.style.display = 'none';
      productDetailSection.style.display = 'none';
      checkoutSection && (checkoutSection.style.display = 'none');
      likedProductsSection && (likedProductsSection.style.display = 'none');
      // Scroll to footer contact
      setTimeout(function() {
        const contactSection = document.querySelector('.footer-contact-minimal');
        if (contactSection) {
          contactSection.scrollIntoView({behavior:'smooth', block:'center'});
          contactSection.classList.add('sb-inview');
        }
      }, 30);
    });
  </script>
  <script>
    // === ENSURE LUXURY OVERLAYS ON ALL PRODUCT CARDS (STATIC & DYNAMIC) ===
    (function() {
      function ensureLuxuryOverlays(card) {
        if (!card.querySelector('.lux-glow')) {
          card.insertAdjacentHTML('beforeend',
            '<div class="lux-glow"></div><div class="lux-shadow"></div><div class="lux-border"></div><div class="lux-light"></div><div class="lux-tilt"></div>'
          );
        }
      }
      // For all static product cards on page load
      document.querySelectorAll('.product-card').forEach(ensureLuxuryOverlays);
      // For dynamically added product cards (e.g., all-products grid, carousels)
      const observer = new MutationObserver(mutations => {
        mutations.forEach(mutation => {
          mutation.addedNodes.forEach(node => {
            if (node.nodeType === 1 && node.classList.contains('product-card')) {
              ensureLuxuryOverlays(node);
            } else if (node.nodeType === 1) {
              node.querySelectorAll && node.querySelectorAll('.product-card').forEach(ensureLuxuryOverlays);
            }
          });
        });
      });
      observer.observe(document.body, { childList: true, subtree: true });
    })();
  </script>
  <!-- Payment Button at the bottom of checkout section -->
  <script>
    // Wait for DOMContentLoaded to ensure elements exist
    window.addEventListener('DOMContentLoaded', function() {
      // Add Payment button only if not already present
      if (!document.getElementById('checkout-payment-btn')) {
        var checkoutLeft = document.querySelector('.checkout-left');
        var paymentBtn = document.createElement('button');
        paymentBtn.className = 'checkout-payment-btn';
        paymentBtn.id = 'checkout-payment-btn';
        paymentBtn.innerHTML = '<span>Continue</span>';
        paymentBtn.type = 'button';
        paymentBtn.disabled = true;
        paymentBtn.style.opacity = '0.6';
        // Insert after the checkout form
        checkoutLeft.appendChild(paymentBtn);

        // Validation logic
        function validateCheckoutForm() {
          var email = document.getElementById('checkout-email').value.trim();
          var address = document.getElementById('checkout-address').value.trim();
          var phone = document.getElementById('checkout-phone').value.trim();
          var city = document.getElementById('checkout-city').value.trim();
          var saveInfo = document.getElementById('checkout-saveinfo').checked;
          // Basic email regex
          var emailValid = /^[^@\s]+@[^@\s]+\.[^@\s]+$/.test(email);
          var phoneValid = phone.length >= 6;
          var addressValid = address.length > 2;
          var cityValid = city.length > 1;
          var allValid = emailValid && addressValid && phoneValid && cityValid && saveInfo;
          paymentBtn.disabled = !allValid;
          paymentBtn.style.opacity = allValid ? '1' : '0.6';
          paymentBtn.style.cursor = allValid ? 'pointer' : 'not-allowed';
        }
        // Attach listeners
        ['checkout-email','checkout-address','checkout-phone','checkout-city','checkout-saveinfo'].forEach(function(id) {
          var el = document.getElementById(id);
          if (el) {
            el.addEventListener('input', validateCheckoutForm);
            el.addEventListener('change', validateCheckoutForm);
          }
        });
        // Initial validation
        validateCheckoutForm();

        // Continue button click logic
        paymentBtn.addEventListener('click', function(e) {
          e.preventDefault();
          if (paymentBtn.disabled) return;
          // Show payment section with smooth transition
          var paymentBlock = document.getElementById('checkout-payment-block');
          if (paymentBlock) {
            paymentBlock.classList.add('active');
            paymentBlock.scrollIntoView({behavior:'smooth', block:'center'});
          }
          // Hide form if needed
          var checkoutForm = document.getElementById('checkout-form');
          if (checkoutForm) checkoutForm.style.display = 'none';
          // Hide confirmation if visible
          var confirmationBlock = document.getElementById('checkout-confirmation-block');
          if (confirmationBlock) confirmationBlock.style.display = 'none';
          // Remove the Continue button itself so it is not visible during payment
          paymentBtn.remove();
        });
      }
    });
  </script>
  <!-- Enhanced Payment Section (credit card & PayPal) -->
  <script>
  window.addEventListener('DOMContentLoaded', function() {
    var paymentBlock = document.getElementById('checkout-payment-block');
    if (!paymentBlock) return;
    // Only add if not already present
    if (!document.getElementById('enhanced-payment-methods')) {
      // Clear existing content
      paymentBlock.innerHTML = '';
      // Payment method selection
      var methodsRow = document.createElement('div');
      methodsRow.className = 'payment-methods-row';
      methodsRow.id = 'enhanced-payment-methods';
      // Credit Card button
      var creditBtn = document.createElement('button');
      creditBtn.className = 'payment-method-btn selected';
      creditBtn.type = 'button';
      creditBtn.id = 'payment-method-credit';
      creditBtn.innerHTML = '<i class="fa fa-credit-card"></i>Credit Card';
      // PayPal button
      var paypalBtn = document.createElement('button');
      paypalBtn.className = 'payment-method-btn';
      paypalBtn.type = 'button';
      paypalBtn.id = 'payment-method-paypal';
      paypalBtn.innerHTML = '<i class="fa fa-paypal"></i>PayPal';
      methodsRow.appendChild(creditBtn);
      methodsRow.appendChild(paypalBtn);
      paymentBlock.appendChild(methodsRow);
      // Credit Card Form
      var creditForm = document.createElement('form');
      creditForm.className = 'payment-form-section credit-card-fields active';
      creditForm.id = 'credit-card-form';
      creditForm.autocomplete = 'off';
      creditForm.innerHTML = `
        <div class="credit-card-fields">
          <input class="credit-card-input" id="cc-name" type="text" placeholder="Name on Card" required autocomplete="cc-name" />
          <input class="credit-card-input" id="cc-number" type="text" placeholder="Card Number" maxlength="19" required autocomplete="cc-number" inputmode="numeric" pattern="[0-9 ]*" />
          <div class="credit-card-row">
            <input class="credit-card-input" id="cc-exp" type="text" placeholder="MM/YY" maxlength="5" required autocomplete="cc-exp" inputmode="numeric" pattern="[0-9/]*" />
            <input class="credit-card-input" id="cc-cvc" type="text" placeholder="CVC" maxlength="4" required autocomplete="cc-csc" inputmode="numeric" pattern="[0-9]*" />
          </div>
        </div>
        <button class="payment-submit-btn" type="submit"><span>Pay Now</span></button>
      `;
      // PayPal Form (simulated)
      var paypalForm = document.createElement('form');
      paypalForm.className = 'payment-form-section';
      paypalForm.id = 'paypal-form';
      paypalForm.autocomplete = 'off';
      paypalForm.innerHTML = `
        <div style="text-align:center;margin-bottom:1.2em;">
          <i class="fa fa-paypal" style="font-size:2.2em;color:#bfa05a;"></i><br>
          <span style="font-size:1.1em;color:var(--accent-pink-dark);font-weight:700;">Pay securely with PayPal</span>
        </div>
        <input class="credit-card-input" id="paypal-email" type="email" placeholder="PayPal Email" required autocomplete="email" />
        <button class="payment-submit-btn" type="submit"><span>Pay with PayPal</span></button>
      `;
      paymentBlock.appendChild(creditForm);
      paymentBlock.appendChild(paypalForm);
      // Payment Success Message
      var successMsg = document.createElement('div');
      successMsg.className = 'payment-success-message';
      successMsg.id = 'payment-success-message';
      successMsg.innerHTML = `<i class='fa fa-check-circle' style='font-size:2.2rem;color:var(--accent-gold);'></i><br>Thank you for your payment!<br>Your order is confirmed.`;
      paymentBlock.appendChild(successMsg);
      // Payment method switching logic
      creditBtn.addEventListener('click', function() {
        creditBtn.classList.add('selected');
        paypalBtn.classList.remove('selected');
        creditForm.classList.add('active');
        paypalForm.classList.remove('active');
      });
      paypalBtn.addEventListener('click', function() {
        paypalBtn.classList.add('selected');
        creditBtn.classList.remove('selected');
        paypalForm.classList.add('active');
        creditForm.classList.remove('active');
      });
      // Credit card form submit
      creditForm.addEventListener('submit', function(e) {
        e.preventDefault();
        // Simple validation
        var name = document.getElementById('cc-name').value.trim();
        var number = document.getElementById('cc-number').value.replace(/\D/g, '');
        var exp = document.getElementById('cc-exp').value.trim();
        var cvc = document.getElementById('cc-cvc').value.trim();
        if (!name || number.length < 13 || exp.length < 4 || cvc.length < 3) {
          alert('Please enter valid credit card details.');
          return;
        }
        // Simulate payment
        creditForm.querySelector('button').disabled = true;
        creditForm.querySelector('button').innerHTML = '<span>Processing...</span>';
        setTimeout(function() {
          creditForm.querySelector('button').disabled = false;
          creditForm.querySelector('button').innerHTML = '<span>Pay Now</span>';
          creditForm.classList.remove('active');
          successMsg.classList.add('active');
          // Optionally clear cart
          if (typeof setCart === 'function') setCart([]);
          if (typeof updateCartBadge === 'function') updateCartBadge();
        }, 1200);
      });
      // PayPal form submit
      paypalForm.addEventListener('submit', function(e) {
        e.preventDefault();
        var email = document.getElementById('paypal-email').value.trim();
        if (!email || !/^[^@\s]+@[^@\s]+\.[^@\s]+$/.test(email)) {
          alert('Please enter a valid PayPal email.');
          return;
        }
        paypalForm.querySelector('button').disabled = true;
        paypalForm.querySelector('button').innerHTML = '<span>Processing...</span>';
        setTimeout(function() {
          paypalForm.querySelector('button').disabled = false;
          paypalForm.querySelector('button').innerHTML = '<span>Pay with PayPal</span>';
          paypalForm.classList.remove('active');
          successMsg.classList.add('active');
          if (typeof setCart === 'function') setCart([]);
          if (typeof updateCartBadge === 'function') updateCartBadge();
        }, 1200);
      });
      // Hide payment block and show homepage on success click
      successMsg.addEventListener('click', function() {
        var checkoutSection = document.getElementById('checkout-section');
        var homepageContent = document.getElementById('homepage-content');
        if (checkoutSection) checkoutSection.style.display = 'none';
        if (homepageContent) homepageContent.style.display = '';
        window.scrollTo({top:0,behavior:'smooth'});
        // Reset payment block for next time
        setTimeout(function() {
          creditForm.classList.add('active');
          paypalForm.classList.remove('active');
          successMsg.classList.remove('active');
          document.getElementById('checkout-form').style.display = '';
          paymentBlock.classList.remove('active');
        }, 800);
      });
    }
  });
  </script>
