  <!-- Registration Modal -->
  <div id="signup-modal" class="modal-overlay">
    <div class="modal-content">
      <div class="modal-title">Create Account</div>
      <div class="modal-subtitle">Sign up to get started</div>
      <form class="modal-form" id="signup-form" autocomplete="off" onsubmit="return false;">
        <label class="modal-label" for="signup-fullname">Full Name</label>
        <div class="modal-input-wrap">
          <span class="modal-input-icon"><i class="fa fa-user"></i></span>
