    // Helper to get all Perfect Sets data
    function getPerfectSetsData() {
      // Return the full perfectSetsData array with all fields (desc, gallery, colors, sizes, etc.)
      return perfectSetsData;
    }
    // Helper to get all Most Loved Items data
    function getMostLovedItemsData() {
      // Only select product-cards from the 'Our Most Loved Items' section
      const featuredSection = document.querySelector('.featured .products-grid');
      if (!featuredSection) return [];
      return Array.from(featuredSection.querySelectorAll('.product-card')).map(card => ({
        title: card.getAttribute('data-title'),
        price: card.getAttribute('data-price'),
        img: card.getAttribute('data-img'),
        desc: card.getAttribute('data-desc'),
        gallery: card.getAttribute('data-gallery'),
        colors: card.getAttribute('data-colors'),
        sizes: card.getAttribute('data-sizes'),
        category: card.getAttribute('data-category')
      }));
    }
    // Update Shop Now button click to show both sections' products
    shopNowBtn.addEventListener('click', function(e) {
      e.preventDefault();
      homepageContent.style.display = 'none';
      allProductsSection.style.display = 'flex';
      // Combine both arrays
      const allProducts = getMostLovedItemsData().concat(getPerfectSetsData());
      renderAllProductsGrid(null, allProducts);
      window.scrollTo({top:0,behavior:'smooth'});
    });
    // Update renderAllProductsGrid to accept a data override
    function renderAllProductsGrid(categoryFilter, dataOverride) {
      // Define the 4 missing products to always include
      const alwaysInclude = [
        {
          title: "Camel Luxe Pumps",
          price: "$229",
          img: "https://elliebelle.com/cdn/shop/files/4824942.jpg?height=871&v=1736956782",
          desc: "Elegant ivory pumps in soft satin, perfect for weddings and special occasions.",
