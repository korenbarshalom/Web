  <script>
    // Modal logic
    const loginBtn = document.querySelector('.login-btn');
    const modal = document.getElementById('login-modal');
    const closeModalBtn = document.getElementById('modal-close-btn');
    // --- Signup modal logic ---
    const signupModal = document.getElementById('signup-modal');
    const openSignupBtn = document.getElementById('open-signup-modal');
    const signupCloseBtn = document.getElementById('signup-close-btn');
    const backToLoginBtn = document.getElementById('back-to-login');
    // Open signup modal from login
    if (openSignupBtn) {
      openSignupBtn.addEventListener('click', function(e) {
        e.preventDefault();
        modal.classList.remove('active');
        signupModal.classList.add('active');
      });
    }
    // Close signup modal
    if (signupCloseBtn) {
      signupCloseBtn.addEventListener('click', function() {
        signupModal.classList.remove('active');
      });
    }
    // Back to login from signup
    if (backToLoginBtn) {
      backToLoginBtn.addEventListener('click', function(e) {
        e.preventDefault();
        signupModal.classList.remove('active');
        modal.classList.add('active');
      });
    }
    // Close signup modal on overlay click
    signupModal.addEventListener('click', function(e) {
      if (e.target === signupModal) {
        signupModal.classList.remove('active');
      }
    });
    // Close signup modal on Escape
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        signupModal.classList.remove('active');
      }
    });
    loginBtn.addEventListener('click', function(e) {
      e.preventDefault();
      modal.classList.add('active');
    });
    closeModalBtn.addEventListener('click', function() {
      modal.classList.remove('active');
    });
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        modal.classList.remove('active');
      }
    });
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        modal.classList.remove('active');
      }
    });

    // Product card click logic (REPLACED for full-page view)
    const homepageContent = document.getElementById('homepage-content');
    const productDetailSection = document.getElementById('product-detail-section');
    const productMainImg = document.getElementById('product-main-img');
    const productThumbnails = document.getElementById('product-thumbnails');
    const productDetailTitle = document.getElementById('product-detail-title');
    const productDetailPrice = document.getElementById('product-detail-price');
    const productDetailDesc = document.getElementById('product-detail-desc');
    const colorOptions = document.getElementById('color-options');
    const sizeOptions = document.getElementById('size-options');
    const addToCartBtn = document.getElementById('add-to-cart-btn');
    const backToHomeBtn = document.getElementById('back-to-home');

    function clearActiveOptions(container) {
      Array.from(container.children).forEach(child => child.classList.remove('active'));
    }

    function renderProductDetail(card) {
      // Set title, price, desc
      productDetailTitle.textContent = card.getAttribute('data-title');
      productDetailPrice.textContent = card.getAttribute('data-price');
      productDetailDesc.textContent = card.getAttribute('data-desc');
      // Gallery
      const gallery = JSON.parse(card.getAttribute('data-gallery') || '["'+card.getAttribute('data-img')+'"]');
      productMainImg.src = gallery[0];
      productMainImg.alt = card.getAttribute('data-title');
      productThumbnails.innerHTML = '';
      gallery.forEach((img, idx) => {
        const thumb = document.createElement('img');
        thumb.src = img;
        thumb.className = 'product-thumb' + (idx === 0 ? ' active' : '');
        thumb.style.cursor = 'pointer';
        thumb.style.width = '54px';
        thumb.style.height = '54px';
        thumb.style.objectFit = 'cover';
        thumb.style.borderRadius = '12px';
        thumb.style.marginRight = '0.7em';
        thumb.addEventListener('click', () => {
          productMainImg.src = img;
          clearActiveOptions(productThumbnails);
          thumb.classList.add('active');
        });
        productThumbnails.appendChild(thumb);
      });
      // Colors
      colorOptions.innerHTML = '';
      const colors = JSON.parse(card.getAttribute('data-colors') || '[]');
      colors.forEach((color, idx) => {
        const btn = document.createElement('button');
        btn.className = 'color-dot' + (idx === 0 ? ' active' : '');
        btn.style.background = color;
        btn.setAttribute('aria-label', 'Color option');
        btn.addEventListener('click', () => {
          clearActiveOptions(colorOptions);
          btn.classList.add('active');
        });
        colorOptions.appendChild(btn);
      });
      // Sizes
      sizeOptions.innerHTML = '';
      const sizes = JSON.parse(card.getAttribute('data-sizes') || '[]');
      sizes.forEach((size, idx) => {
        const btn = document.createElement('button');
        btn.className = 'size-btn' + (idx === 0 ? ' active' : '');
        btn.textContent = size;
        btn.addEventListener('click', () => {
          clearActiveOptions(sizeOptions);
          btn.classList.add('active');
        });
        sizeOptions.appendChild(btn);
      });
      // Show and update heart icon
      const title = card.getAttribute('data-title');
      updateProductLikeBtn(title);
      productLikeBtn.style.display = 'flex';
    }

    // Track navigation source for product detail back button
    let cameFromAllProducts = false;

    document.querySelectorAll('.product-card').forEach(card => {
      card.style.cursor = 'pointer';
      card.addEventListener('click', function() {
        homepageContent.style.display = 'none';
        productDetailSection.style.display = 'block';
        renderProductDetail(card);
        window.scrollTo({top:0,behavior:'smooth'});
        cameFromAllProducts = false; // Default: not from All Products
      });
    });
    backToHomeBtn.addEventListener('click', function() {
      if (cameFromAllProducts) {
        productDetailSection.style.display = 'none';
        allProductsSection.style.display = 'flex';
        window.scrollTo({top:0,behavior:'smooth'});
      } else {
        productDetailSection.style.display = 'none';
        homepageContent.style.display = '';
        window.scrollTo({top:0,behavior:'smooth'});
      }
      cameFromAllProducts = false; // Reset after navigating back
    });
    // Home link in navbar returns to homepage view
    document.querySelectorAll('nav a').forEach(link => {
      if (link.textContent.trim().toLowerCase() === 'home') {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          document.getElementById('product-detail-section').style.display = 'none';
          document.getElementById('homepage-content').style.display = '';
          window.scrollTo({top:0,behavior:'smooth'});
        });
      }
    });
