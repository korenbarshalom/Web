        @media (max-width: 600px) {
          #custom-cc-payment-wrap {
            max-width: 98vw;
            padding: 1.2em 0.5em 0.7em 0.5em;
          }
          .custom-cc-row { flex-direction: column; gap: 0.7em; }
        }
      `;
      document.head.appendChild(style);
      // Payment button click logic
      paymentBtn.addEventListener('click', function(e) {
        e.preventDefault();
        ccWrap.style.display = 'block';
        paymentBtn.style.display = 'none';
      });
      // Show Pay button only when all fields are filled
      function checkCCFields() {
        var name = document.getElementById('custom-cc-name').value.trim();
        var number = document.getElementById('custom-cc-number').value.replace(/\D/g, '');
        var exp = document.getElementById('custom-cc-exp').value.trim();
        var cvv = document.getElementById('custom-cc-cvv').value.trim();
        var payBtn = document.getElementById('custom-cc-pay-btn');
        if (name && number.length >= 13 && exp.length >= 4 && cvv.length >= 3) {
          payBtn.style.display = 'block';
        } else {
          payBtn.style.display = 'none';
        }
      }
    }
  });
  </script>
  <!-- === END CUSTOM CREDIT CARD PAYMENT FORM & PAYPAL BUTTON (ADDED) === -->
  <script>
(function(){
  if(!window.chatbase || window.chatbase("getState")!=="initialized"){
    window.chatbase=(...args)=>{
      if(!window.chatbase.q){window.chatbase.q=[]}
      window.chatbase.q.push(args)
    };
    window.chatbase=new Proxy(window.chatbase,{
      get(t,prop){ if(prop==="q"){return t.q}
        return(...a)=>t(prop,...a)
      }
    });
  }
  const onLoad=function(){
    const s=document.createElement("script");
    s.src="https://www.chatbase.co/embed.min.js";
    s.id="-bdusH7XjzkE2e4iM2oDj";
    s.domain="www.chatbase.co";
    document.body.appendChild(s);
  };
  if(document.readyState==="complete"){ onLoad(); }
  else { window.addEventListener("load",onLoad); }
})();
</script>
  <script>
    // === USER AUTH/SIGNUP/LOGIN LOGIC ===
    (function() {
      // Elements
      const navbarAction = document.getElementById('navbar-action-user');
      const loginSignupBtn = document.getElementById('login-signup-btn');
      const loginModal = document.getElementById('login-modal');
      const signupModal = document.getElementById('signup-modal');
      const signupForm = document.getElementById('signup-form');
      const loginForm = loginModal ? loginModal.querySelector('.modal-form') : null;
      // Helper: get/set user
      function getUsers() {
        try { return JSON.parse(localStorage.getItem('shinybelle_users')||'[]'); } catch { return []; }
      }
      function setUsers(users) {
        localStorage.setItem('shinybelle_users', JSON.stringify(users));
      }
      function getCurrentUser() {
        try { return JSON.parse(localStorage.getItem('shinybelle_current_user')||'null'); } catch { return null; }
      }
      function setCurrentUser(user) {
        if (user) localStorage.setItem('shinybelle_current_user', JSON.stringify(user));
        else localStorage.removeItem('shinybelle_current_user');
      }
      // Render user button/dropdown
      function renderUserNav() {
        const user = getCurrentUser();
        if (user && user.name) {
          // Replace login/signup with user button
          navbarAction.innerHTML = `
            <div class="user-dropdown-wrap">
              <button id="user-nav-btn" type="button">
                <span>${user.name}</span>
                <span class="caret" aria-hidden="true" style="margin-left:0.3em;">&#9662;</span>
              </button>
              <div id="user-dropdown">
                <button class="user-dropdown-item" id="liked-products-btn" tabindex="0"><i class="fa fa-heart"></i>Liked Products</button>
                <div class="user-dropdown-separator"></div>
                <button class="user-dropdown-item" id="signout-btn" tabindex="0"><i class="fa fa-sign-out-alt"></i>Sign Out</button>
              </div>
            </div>
            <div class="cart-navbar-wrap" style="position:relative;display:inline-block;margin-left:1.2em;">
              <button id="cart-icon-btn" aria-label="View cart" style="background:none;border:none;cursor:pointer;position:relative;outline:none;">
                <i class="fa fa-shopping-cart" style="font-size:1.7rem;color:var(--accent-pink-dark);"></i>
                <span id="cart-count-badge" style="position:absolute;top:-7px;right:-10px;background:linear-gradient(90deg,var(--accent-pink-dark),var(--accent-gold));color:#fff;font-size:0.92rem;font-weight:700;padding:0.1em 0.6em;border-radius:999px;box-shadow:0 2px 8px rgba(184,111,167,0.13);min-width:1.5em;text-align:center;display:none;">0</span>
              </button>
              <div id="mini-cart-panel" style="display:none;position:absolute;right:0;top:2.5em;z-index:2000;"></div>
            </div>
          `;
          // Dropdown logic
          const userBtn = document.getElementById('user-nav-btn');
          const dropdown = document.getElementById('user-dropdown');
          userBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            const isOpen = dropdown.classList.contains('open');
            document.querySelectorAll('#user-dropdown').forEach(d => d.classList.remove('open'));
            document.querySelectorAll('#user-nav-btn').forEach(b => b.classList.remove('open'));
            if (!isOpen) {
              dropdown.classList.add('open');
              userBtn.classList.add('open');
            }
          });
          document.addEventListener('click', function(e) {
            if (dropdown && dropdown.classList.contains('open') && !userBtn.contains(e.target) && !dropdown.contains(e.target)) {
              dropdown.classList.remove('open');
              userBtn.classList.remove('open');
            }
          });
          // Keyboard accessibility: close on Escape
          document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && dropdown.classList.contains('open')) {
              dropdown.classList.remove('open');
              userBtn.classList.remove('open');
            }
          });
          // Sign out
          const signoutBtn = document.getElementById('signout-btn');
          signoutBtn.addEventListener('click', function() {
            setCurrentUser(null);
            renderUserNav();
            // --- Ensure cart is re-initialized after logout ---
            if (window.ShinyBelleCart && typeof window.ShinyBelleCart.reinitialize === 'function') {
              window.ShinyBelleCart.reinitialize();
            }
          });
        } else {
          // Show login/signup
          navbarAction.innerHTML = `
            <a href="#login" class="login-btn" id="login-signup-btn">Log In</a>
            <div class="cart-navbar-wrap" style="position:relative;display:inline-block;margin-left:1.2em;">
              <button id="cart-icon-btn" aria-label="View cart" style="background:none;border:none;cursor:pointer;position:relative;outline:none;">
                <i class="fa fa-shopping-cart" style="font-size:1.7rem;color:var(--accent-pink-dark);"></i>
                <span id="cart-count-badge" style="position:absolute;top:-7px;right:-10px;background:linear-gradient(90deg,var(--accent-pink-dark),var(--accent-gold));color:#fff;font-size:0.92rem;font-weight:700;padding:0.1em 0.6em;border-radius:999px;box-shadow:0 2px 8px rgba(184,111,167,0.13);min-width:1.5em;text-align:center;display:none;">0</span>
              </button>
              <div id="mini-cart-panel" style="display:none;position:absolute;right:0;top:2.5em;z-index:2000;"></div>
            </div>
          `;
          // Re-attach login modal logic
          const loginBtn = document.getElementById('login-signup-btn');
          if (loginBtn && loginModal) {
            loginBtn.addEventListener('click', function(e) {
              e.preventDefault();
              loginModal.classList.add('active');
            });
          }
        }
        // Re-attach cart logic (cart icon btn)
        if (typeof updateCartBadge === 'function') updateCartBadge();
      }
      // Sign Up
      if (signupForm) {
        signupForm.addEventListener('submit', function(e) {
          e.preventDefault();
          const name = document.getElementById('signup-fullname').value.trim();
          const phone = document.getElementById('signup-phone').value.trim();
          if (!name || !phone) return;
          let users = getUsers();
          // If phone already exists, update name
          let user = users.find(u => u.phone === phone);
          if (!user) {
            user = { name, phone };
            users.push(user);
          } else {
            user.name = name;
          }
          setUsers(users);
          setCurrentUser(user);
          signupModal.classList.remove('active');
          renderUserNav();
        });
      }
      // Log In
      if (loginForm) {
        loginForm.addEventListener('submit', function(e) {
          e.preventDefault();
          const phone = document.getElementById('modal-phone').value.trim();
          if (!phone) return;
          const users = getUsers();
          const user = users.find(u => u.phone === phone);
          if (user) {
            setCurrentUser(user);
            loginModal.classList.remove('active');
            renderUserNav();
            // --- Ensure cart.js and liked-products are re-initialized after login ---
            if (window.ShinyBelleCart && typeof window.ShinyBelleCart.reinitialize === 'function') {
              window.ShinyBelleCart.reinitialize();
            }
            if (typeof attachLikedProductsDropdownHandler === 'function') {
              attachLikedProductsDropdownHandler();
            }
          } else {
            alert('No account found for this phone number. Please sign up.');
          }
        });
      }
      // On load
      renderUserNav();
      // --- Ensure cart.js and liked-products are initialized on page load ---
      if (window.ShinyBelleCart && typeof window.ShinyBelleCart.reinitialize === 'function') {
        window.ShinyBelleCart.reinitialize();
      }
      if (typeof attachLikedProductsDropdownHandler === 'function') {
        attachLikedProductsDropdownHandler();
      }
    })();
  </script>
  <!-- LIKED PRODUCTS SECTION (hidden by default) -->
  <section id="liked-products-section">
    <div class="liked-products-container">
      <button class="back-btn" id="liked-products-back"><i class="fa fa-arrow-left"></i> Back</button>
      <h2 class="liked-products-title">Liked Products</h2>
      <div class="products-grid" id="liked-products-grid"></div>
    </div>
  </section>
  <script>
    // --- PRODUCT LIKE/HEART LOGIC ---
    const productLikeBtn = document.getElementById('product-like-btn');
    function getLikedProducts() {
      try { return JSON.parse(localStorage.getItem('shinybelle_liked_products')||'[]'); } catch { return []; }
    }
    function setLikedProducts(arr) {
      localStorage.setItem('shinybelle_liked_products', JSON.stringify(arr));
    }
    function isProductLiked(title) {
      const liked = getLikedProducts();
      return liked.includes(title);
    }
    function updateProductLikeBtn(title) {
      if (!productLikeBtn) return;
      const liked = isProductLiked(title);
      productLikeBtn.innerHTML = liked ? '<span style="font-size:2rem;transition:color 0.22s;">&#10084;&#65039;</span>' : '<span style="font-size:2rem;transition:color 0.22s;">&#9825;</span>';
      productLikeBtn.classList.toggle('liked', liked);
      productLikeBtn.setAttribute('aria-pressed', liked ? 'true' : 'false');
    }
    productLikeBtn.addEventListener('click', function() {
      const title = productDetailTitle.textContent;
      let liked = getLikedProducts();
      if (liked.includes(title)) {
        liked = liked.filter(t => t !== title);
      } else {
        liked.push(title);
      }
      setLikedProducts(liked);
      updateProductLikeBtn(title);
    });
    // Patch renderProductDetail to update heart icon
    const origRenderProductDetail = renderProductDetail;
    renderProductDetail = function(card) {
      origRenderProductDetail(card);
      // Show and update heart icon
      const title = card.getAttribute('data-title');
      updateProductLikeBtn(title);
      productLikeBtn.style.display = 'flex';
    };

    // === LIKED PRODUCTS SECTION FUNCTIONALITY ===
    const likedProductsSection = document.getElementById('liked-products-section');
    const likedProductsGrid = document.getElementById('liked-products-grid');
    const likedProductsBack = document.getElementById('liked-products-back');
    // Helper: get all product data (from homepage and perfect sets)
    function getAllProductsForLike() {
      // Use the same logic as getAllProductData, but ensure all products are included
      if (typeof getAllProductData === 'function') return getAllProductData();
      return [];
    }
    // Render liked products as cards
    function renderLikedProductsGrid() {
      const likedTitles = getLikedProducts();
      const allProducts = getAllProductsForLike();
      likedProductsGrid.innerHTML = '';
      const liked = allProducts.filter(p => likedTitles.includes(p.title));
      if (liked.length === 0) {
        likedProductsGrid.innerHTML = '<div style="grid-column:1/-1;text-align:center;font-size:1.1rem;color:#b86fa7;padding:2em 0;">You have not liked any products yet.</div>';
        return;
      }
      liked.forEach(product => {
        const card = document.createElement('div');
        card.className = 'product-card';
        card.setAttribute('data-title', product.title || '');
        card.setAttribute('data-price', product.price || '');
        card.setAttribute('data-img', product.img || '');
        card.setAttribute('data-desc', product.desc || '');
        card.setAttribute('data-gallery', product.gallery || `["${product.img || ''}"]`);
        card.setAttribute('data-colors', product.colors || '[]');
        card.setAttribute('data-sizes', product.sizes || '[]');
        card.setAttribute('data-category', product.category || '');
        card.innerHTML = `
          <img src="${product.img}" alt="${product.title}">
          <h4>${product.title}</h4>
          <span>${product.price}</span>
        `;
        card.style.cursor = 'pointer';
        card.addEventListener('click', function() {
          likedProductsSection.style.display = 'none';
          productDetailSection.style.display = 'block';
          renderProductDetail(card);
          window.scrollTo({top:0,behavior:'smooth'});
        });
        likedProductsGrid.appendChild(card);
      });
      // Animate cards in
      setTimeout(function() {
        likedProductsGrid.querySelectorAll('.product-card').forEach(function(card, i) {
          card.classList.add('sb-inview');
        });
      }, 30);
    }
    // Show liked products section
    function showLikedProductsSection() {
      homepageContent.style.display = 'none';
      allProductsSection.style.display = 'none';
      productDetailSection.style.display = 'none';
      checkoutSection && (checkoutSection.style.display = 'none');
      likedProductsSection.style.display = 'flex';
      renderLikedProductsGrid();
      setTimeout(function() {
        likedProductsSection.classList.add('sb-inview');
      }, 10);
      window.scrollTo({top:0,behavior:'smooth'});
    }
    // Dropdown event (re-attach after nav render)
    function attachLikedProductsDropdownHandler() {
      const likedBtn = document.getElementById('liked-products-btn');
      if (likedBtn) {
        likedBtn.addEventListener('click', function(e) {
          e.preventDefault();
          showLikedProductsSection();
          // Close dropdown
          const dropdown = document.getElementById('user-dropdown');
          if (dropdown) dropdown.classList.remove('open');
        });
      }
    }
    // Attach handler on load and after nav render
    window.addEventListener('DOMContentLoaded', attachLikedProductsDropdownHandler);
    // Patch renderUserNav to re-attach handler
    if (typeof renderUserNav === 'function') {
      const origRenderUserNav = renderUserNav;
      renderUserNav = function() {
        origRenderUserNav();
        attachLikedProductsDropdownHandler();
      };
    }
    // Back button logic
    likedProductsBack.addEventListener('click', function() {
      likedProductsSection.style.display = 'none';
      homepageContent.style.display = '';
      setTimeout(function() {
        homepageContent.classList.add('sb-inview');
      }, 10);
      window.scrollTo({top:0,behavior:'smooth'});
    });
    // Hide liked products section on Home link click
    document.querySelectorAll('nav a').forEach(link => {
      if (link.textContent.trim().toLowerCase() === 'home') {
        link.addEventListener('click', function(e) {
          likedProductsSection.style.display = 'none';
        });
      }
    });
  </script>
  <script src="cart.js"></script>
</body>
</html> 
