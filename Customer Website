  <script>
    // Modal logic
    const loginBtn = document.querySelector('.login-btn');
    const modal = document.getElementById('login-modal');
    const closeModalBtn = document.getElementById('modal-close-btn');
    loginBtn.addEventListener('click', function(e) {
      e.preventDefault();
      modal.classList.add('active');
    });
    closeModalBtn.addEventListener('click', function() {
      modal.classList.remove('active');
    });
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        modal.classList.remove('active');
      }
    });
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        modal.classList.remove('active');
      }
    });

    // Product card click logic (REPLACED for full-page view)
    const homepageContent = document.getElementById('homepage-content');
    const productDetailSection = document.getElementById('product-detail-section');
    const productMainImg = document.getElementById('product-main-img');
    const productThumbnails = document.getElementById('product-thumbnails');
    const productDetailTitle = document.getElementById('product-detail-title');
    const productDetailPrice = document.getElementById('product-detail-price');
    const productDetailDesc = document.getElementById('product-detail-desc');
    const colorOptions = document.getElementById('color-options');
    const sizeOptions = document.getElementById('size-options');
    const addToCartBtn = document.getElementById('add-to-cart-btn');
    const backToHomeBtn = document.getElementById('back-to-home');

    function clearActiveOptions(container) {
      Array.from(container.children).forEach(child => child.classList.remove('active'));
    }

    function renderProductDetail(card) {
      // Set title, price, desc
      productDetailTitle.textContent = card.getAttribute('data-title');
      productDetailPrice.textContent = card.getAttribute('data-price');
      productDetailDesc.textContent = card.getAttribute('data-desc');
      // Gallery
      const gallery = JSON.parse(card.getAttribute('data-gallery') || '["'+card.getAttribute('data-img')+'"]');
      productMainImg.src = gallery[0];
      productMainImg.alt = card.getAttribute('data-title');
      productThumbnails.innerHTML = '';
      gallery.forEach((img, idx) => {
        const thumb = document.createElement('img');
        thumb.src = img;
        thumb.className = 'product-thumb' + (idx === 0 ? ' active' : '');
        thumb.style.cursor = 'pointer';
        thumb.style.width = '54px';
        thumb.style.height = '54px';
        thumb.style.objectFit = 'cover';
        thumb.style.borderRadius = '12px';
        thumb.style.marginRight = '0.7em';
        thumb.addEventListener('click', () => {
          productMainImg.src = img;
          clearActiveOptions(productThumbnails);
          thumb.classList.add('active');
        });
        productThumbnails.appendChild(thumb);
      });
      // Colors
      colorOptions.innerHTML = '';
      const colors = JSON.parse(card.getAttribute('data-colors') || '[]');
      colors.forEach((color, idx) => {
        const btn = document.createElement('button');
        btn.className = 'color-dot' + (idx === 0 ? ' active' : '');
        btn.style.background = color;
        btn.setAttribute('aria-label', 'Color option');
        btn.addEventListener('click', () => {
          clearActiveOptions(colorOptions);
          btn.classList.add('active');
        });
        colorOptions.appendChild(btn);
      });
      // Sizes
      sizeOptions.innerHTML = '';
      const sizes = JSON.parse(card.getAttribute('data-sizes') || '[]');
      sizes.forEach((size, idx) => {
        const btn = document.createElement('button');
        btn.className = 'size-btn' + (idx === 0 ? ' active' : '');
        btn.textContent = size;
        btn.addEventListener('click', () => {
          clearActiveOptions(sizeOptions);
          btn.classList.add('active');
        });
        sizeOptions.appendChild(btn);
      });
    }

    document.querySelectorAll('.product-card').forEach(card => {
      card.style.cursor = 'pointer';
      card.addEventListener('click', function() {
        homepageContent.style.display = 'none';
        productDetailSection.style.display = 'block';
        renderProductDetail(card);
        window.scrollTo({top:0,behavior:'smooth'});
      });
    });
    backToHomeBtn.addEventListener('click', function() {
      productDetailSection.style.display = 'none';
      homepageContent.style.display = '';
      window.scrollTo({top:0,behavior:'smooth'});
    });
    // Home link in navbar returns to homepage view
    document.querySelectorAll('nav a').forEach(link => {
      if (link.textContent.trim().toLowerCase() === 'home') {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          document.getElementById('product-detail-section').style.display = 'none';
          document.getElementById('homepage-content').style.display = '';
          window.scrollTo({top:0,behavior:'smooth'});
        });
      }
    });
    // ALL PRODUCTS SECTION LOGIC
    const allProductsSection = document.getElementById('all-products-section');
    const allProductsGrid = document.getElementById('all-products-grid');
    const allProductsBack = document.getElementById('all-products-back');
    const shopNowBtn = document.getElementById('shop-now-btn');
    // Helper: get all product card data from homepage
    function getAllProductData() {
      return Array.from(document.querySelectorAll('.product-card')).map(card => ({
        title: card.getAttribute('data-title'),
        price: card.getAttribute('data-price'),
        img: card.getAttribute('data-img'),
        desc: card.getAttribute('data-desc'),
        gallery: card.getAttribute('data-gallery'),
        colors: card.getAttribute('data-colors'),
        sizes: card.getAttribute('data-sizes'),
        category: card.getAttribute('data-category')
      }));
    }
    // Helper to get all Perfect Sets data
    function getPerfectSetsData() {
      return [
        { title: "Golden Heart Jewelry Set", price: "$429", img: "https://m.media-amazon.com/images/I/71OOtiBa76L._UY1000_.jpg", gallery: '["https://m.media-amazon.com/images/I/71OOtiBa76L._UY1000_.jpg"]' },
        { title: "Midnight Sparkle Set", price: "$389", img: "https://i.etsystatic.com/9665455/r/il/a3949d/2777754922/il_570xN.2777754922_rs3d.jpg" },
        { title: "Royal Elegance Collection", price: "$349", img: "https://www.deraahstore.com/dw/image/v2/BJFS_PRD/on/demandware.static/-/Sites-deraah-master/default/dwa599e9cb/images/10711151022000-1696-1.jpg?sw=2000&sh=2000" },
        { title: "Silver Petal Elegance", price: "$299", img: "https://m.media-amazon.com/images/I/711E7-QpLdL._UY1000_.jpg" },
       
      ];
    }
    // Helper to get all Most Loved Items data
    function getMostLovedItemsData() {
      // Only select product-cards from the 'Our Most Loved Items' section
      const featuredSection = document.querySelector('.featured .products-grid');
      if (!featuredSection) return [];
      return Array.from(featuredSection.querySelectorAll('.product-card')).map(card => ({
        title: card.getAttribute('data-title'),
        price: card.getAttribute('data-price'),
        img: card.getAttribute('data-img'),
        desc: card.getAttribute('data-desc'),
        gallery: card.getAttribute('data-gallery'),
        colors: card.getAttribute('data-colors'),
        sizes: card.getAttribute('data-sizes'),
        category: card.getAttribute('data-category')
      }));
    }
    // Update Shop Now button click to show both sections' products
    shopNowBtn.addEventListener('click', function(e) {
      e.preventDefault();
      homepageContent.style.display = 'none';
      allProductsSection.style.display = 'flex';
      // Combine both arrays
      const allProducts = getMostLovedItemsData().concat(getPerfectSetsData());
      renderAllProductsGrid(null, allProducts);
      window.scrollTo({top:0,behavior:'smooth'});
    });
    // Update renderAllProductsGrid to accept a data override
    function renderAllProductsGrid(categoryFilter, dataOverride) {
      const products = dataOverride || getAllProductData();
      allProductsGrid.innerHTML = '';
      let filtered = products;
      if (categoryFilter) {
        filtered = products.filter(p => (p.category || '').toLowerCase() === categoryFilter.toLowerCase());
      }
      filtered.forEach(product => {
        const card = document.createElement('div');
        card.className = 'product-card';
        // Always set all required data-* attributes for detail page compatibility
        card.setAttribute('data-title', product.title || '');
        card.setAttribute('data-price', product.price || '');
        card.setAttribute('data-img', product.img || '');
        card.setAttribute('data-desc', product.desc || '');
        card.setAttribute('data-gallery', product.gallery || `["${product.img || ''}"]`);
        card.setAttribute('data-colors', product.colors || '[]');
        card.setAttribute('data-sizes', product.sizes || '[]');
        card.setAttribute('data-category', product.category || '');
        card.innerHTML = `
          <img src="${product.img}" alt="${product.title}">
          <h4>${product.title}</h4>
          <span>${product.price}</span>
        `;
        card.style.cursor = 'pointer';
        card.addEventListener('click', function() {
          allProductsSection.style.display = 'none';
          productDetailSection.style.display = 'block';
          renderProductDetail(card);
          window.scrollTo({top:0,behavior:'smooth'});
        });
        allProductsGrid.appendChild(card);
      });
      // If no products, show a message
      if (filtered.length === 0) {
        allProductsGrid.innerHTML = '<div style="grid-column:1/-1;text-align:center;font-size:1.1rem;color:#b86fa7;padding:2em 0;">No products found in this category.</div>';
      }
    }
    // Category card click logic
    document.querySelectorAll('.category-card').forEach(card => {
      card.style.cursor = 'pointer';
      card.addEventListener('click', function() {
        const category = card.getAttribute('data-category');
        homepageContent.style.display = 'none';
        allProductsSection.style.display = 'flex';
        renderAllProductsGrid(category);
        window.scrollTo({top:0,behavior:'smooth'});
      });
    });
    allProductsBack.addEventListener('click', function() {
      allProductsSection.style.display = 'none';
      homepageContent.style.display = '';
      window.scrollTo({top:0,behavior:'smooth'});
    });
    // Home link in navbar returns to homepage view from any section
    document.querySelectorAll('nav a').forEach(link => {
      if (link.textContent.trim().toLowerCase() === 'home') {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          document.getElementById('product-detail-section').style.display = 'none';
          document.getElementById('all-products-section').style.display = 'none';
          document.getElementById('homepage-content').style.display = '';
          window.scrollTo({top:0,behavior:'smooth'});
          // --- FIX: Hide checkout section when navigating Home from navbar ---
          // This ensures checkout is hidden regardless of which step is visible
          var checkoutSection = document.getElementById('checkout-section');
          if (checkoutSection) checkoutSection.style.display = 'none';
        });
      }
    });
    // Add to Cart (demo only)
    addToCartBtn.addEventListener('click', function() {
      addToCartBtn.textContent = 'Added!';
      setTimeout(()=>{addToCartBtn.innerHTML = '<i class="fa fa-shopping-cart"></i> Add to Cart';}, 1200);
    });

    // --- CART LOGIC ---
    const cartIconBtn = document.getElementById('cart-icon-btn');
    const cartCountBadge = document.getElementById('cart-count-badge');
    const miniCartPanel = document.getElementById('mini-cart-panel');

    function getCart() {
      try {
        return JSON.parse(localStorage.getItem('shinybelle_cart') || '[]');
      } catch { return []; }
    }
    function setCart(cart) {
      localStorage.setItem('shinybelle_cart', JSON.stringify(cart));
    }
    function updateCartBadge() {
      const cart = getCart();
      if (cart.length > 0) {
        cartCountBadge.textContent = cart.length;
        cartCountBadge.style.display = '';
      } else {
        cartCountBadge.style.display = 'none';
      }
    }
    function renderMiniCart() {
      const cart = getCart();
      let html = `<div class="mini-cart-title">Your Cart</div><div class="mini-cart-items">`;
      if (cart.length === 0) {
        html += `<div style='text-align:center;color:#b86fa7;padding:1.2em 0;'>Your cart is empty.</div>`;
      } else {
        cart.forEach((item, idx) => {
          html += `<div class='mini-cart-item'>
            <img class='mini-cart-item-img' src='${item.img}' alt='${item.title}'>
            <div class='mini-cart-item-info'>
              <div class='mini-cart-item-title'>${item.title}</div>
              <div class='mini-cart-item-meta'>${item.price}` +
                (item.size ? ` &middot; <span>${item.size}</span>` : '') +
                (item.color ? ` &middot; <span style='display:inline-block;width:1em;height:1em;border-radius:50%;background:${item.color};border:1.5px solid #bfa05a;margin-left:0.3em;vertical-align:middle;'></span>` : '') +
              `</div>
            </div>
            <button class='mini-cart-item-remove' data-idx='${idx}' aria-label='Remove'>&times;</button>
          </div>`;
        });
      }
      html += `</div>`;
      if (cart.length > 0) {
        const total = cart.reduce((sum, item) => sum + (parseFloat(item.price.replace(/[^\d.]/g, '')) || 0), 0);
        html += `<div class='mini-cart-footer'>
          <div class='mini-cart-total'>Total: $${total.toFixed(2)}</div>
          <button class='mini-cart-checkout-btn'>Checkout</button>
        </div>`;
      }
      miniCartPanel.innerHTML = html;
      miniCartPanel.classList.add('active');
      // Remove item logic
      miniCartPanel.querySelectorAll('.mini-cart-item-remove').forEach(btn => {
        btn.addEventListener('click', function(e) {
          const idx = parseInt(btn.getAttribute('data-idx'));
          const cart = getCart();
          cart.splice(idx, 1);
          setCart(cart);
          updateCartBadge();
          renderMiniCart();
        });
      });
      // Checkout button logic
      const checkoutBtn = miniCartPanel.querySelector('.mini-cart-checkout-btn');
      if (checkoutBtn) {
        checkoutBtn.addEventListener('click', function() {
          // Show checkout full-page section, hide all other content except navbar
          document.getElementById('checkout-section').style.display = 'block';
          document.body.style.overflow = 'auto';
          homepageContent.style.display = 'none';
          productDetailSection.style.display = 'none';
          allProductsSection.style.display = 'none';
          miniCartPanel.style.display = 'none';
          miniCartPanel.classList.remove('active');
          renderCheckoutOrderSummary2col();
          // Reset steps
          document.getElementById('checkout-form').style.display = '';
          document.getElementById('checkout-payment-block').style.display = 'none';
          document.getElementById('checkout-confirmation-block').style.display = 'none';
        });
      }
    }
    cartIconBtn.addEventListener('click', function(e) {
      e.stopPropagation();
      if (miniCartPanel.style.display === 'none' || !miniCartPanel.classList.contains('active')) {
        renderMiniCart();
        miniCartPanel.style.display = 'flex';
        miniCartPanel.classList.add('active');
      } else {
        miniCartPanel.style.display = 'none';
        miniCartPanel.classList.remove('active');
      }
    });
    // Hide mini-cart when clicking outside
    document.addEventListener('click', function(e) {
      if (!miniCartPanel.contains(e.target) && e.target !== cartIconBtn && !cartIconBtn.contains(e.target)) {
        miniCartPanel.style.display = 'none';
        miniCartPanel.classList.remove('active');
      }
    });
    // Add to Cart integration
    function getSelectedColor() {
      const active = colorOptions.querySelector('.color-dot.active');
      return active ? active.style.background : '';
    }
    function getSelectedSize() {
      const active = sizeOptions.querySelector('.size-btn.active');
      return active ? active.textContent : '';
    }
    addToCartBtn.addEventListener('click', function() {
      const item = {
        title: productDetailTitle.textContent,
        price: productDetailPrice.textContent,
        img: productMainImg.src,
        size: getSelectedSize(),
        color: getSelectedColor()
      };
      const cart = getCart();
      cart.push(item);
      setCart(cart);
      updateCartBadge();
      addToCartBtn.textContent = 'Added!';
      setTimeout(()=>{addToCartBtn.innerHTML = '<i class="fa fa-shopping-cart"></i> Add to Cart';}, 1200);
    });
    // On page load, update badge
    updateCartBadge();

    // Checkout overlay close logic
    const checkoutSection = document.getElementById('checkout-section');
    const checkoutCloseBtn = document.getElementById('checkout-close-btn');
    checkoutCloseBtn.addEventListener('click', function() {
      checkoutSection.style.display = 'none';
      document.body.style.overflow = '';
      homepageContent.style.display = '';
      window.scrollTo({top:0,behavior:'smooth'});
    });
    // Render order summary for checkout 2col
    function renderCheckoutOrderSummary2col() {
      const cart = getCart();
      const itemsDiv = document.getElementById('checkout-order-summary-items');
      const subtotalDiv = document.getElementById('checkout-subtotal');
      const totalDiv = document.getElementById('checkout-total');
      if (!cart || cart.length === 0) {
        itemsDiv.innerHTML = `<div style='text-align:center;color:#b86fa7;padding:1.2em 0;'>Your cart is empty.</div>`;
        subtotalDiv.textContent = '';
        totalDiv.textContent = '';
        return;
      }
      let html = '';
      let total = 0;
      cart.forEach(item => {
        const price = parseFloat(item.price.replace(/[^\d.]/g, '')) || 0;
        total += price;
        html += `<div class='order-summary-item' style='display:flex;align-items:center;gap:0.7em;background:#fff;border-radius:10px;padding:0.5em 0.7em;position:relative;margin-bottom:0.5em;border:1.5px solid var(--accent-pink-dark);'>
          <img class='order-summary-item-img' src='${item.img}' alt='${item.title}' style='width:44px;height:44px;object-fit:contain;border-radius:8px;background:#fff;border:1.5px solid var(--accent-pink-dark);'>
          <div class='order-summary-item-info' style='flex:1;display:flex;flex-direction:column;gap:0.1em;'>
            <div class='order-summary-item-title' style='font-size:1.05rem;color:var(--accent-pink-dark);font-weight:700;font-family:Playfair Display,serif;'>${item.title}</div>
            <div class='order-summary-item-meta' style='font-size:0.97rem;color:var(--text-dark);opacity:0.85;'>${item.price}` +
              (item.size ? ` &middot; <span>${item.size}</span>` : '') +
              (item.color ? ` &middot; <span style='display:inline-block;width:1em;height:1em;border-radius:50%;background:${item.color};border:1.5px solid #bfa05a;margin-left:0.3em;vertical-align:middle;'></span>` : '') +
            `</div>
          </div>
        </div>`;
      });
      itemsDiv.innerHTML = html;
      subtotalDiv.textContent = `$${total.toFixed(2)}`;
      totalDiv.textContent = `$${total.toFixed(2)}`;
    }
    // Checkout step logic 2col
    const checkoutContinueBtn = document.getElementById('checkout-continue-btn');
    const checkoutForm2col = document.getElementById('checkout-form');
    const checkoutPaymentBlock = document.getElementById('checkout-payment-block');
    const checkoutConfirmationBlock = document.getElementById('checkout-confirmation-block');
    checkoutContinueBtn.addEventListener('click', function() {
      // Validate required fields
      if (!document.getElementById('checkout-email').value.trim() ||
          !document.getElementById('checkout-address').value.trim() ||
          !document.getElementById('checkout-phone').value.trim()) {
        alert('Please fill in all required fields.');
        return;
      }
      checkoutForm2col.style.display = 'none';
      checkoutPaymentBlock.style.display = 'block';
    });
    // Payment step logic 2col
    const checkoutPaymentForm2col = document.getElementById('checkout-payment-form');
    checkoutPaymentForm2col.addEventListener('submit', function(e) {
      e.preventDefault();
      if (!document.getElementById('checkout-payment-method').value) {
        alert('Please select a payment method.');
        return;
      }
      setTimeout(() => {
        setCart([]);
        checkoutPaymentBlock.style.display = 'none';
        checkoutConfirmationBlock.style.display = 'block';
        checkoutConfirmationBlock.innerHTML = `<i class='fa fa-check-circle' style='font-size:2.2rem;color:var(--accent-gold);'></i><br>Thank you for your order!<br>Your payment was successful.`;
        updateCartBadge();
      }, 900);
    });
    // Hide checkout section and return to homepage when confirmation is clicked (optional)
    checkoutConfirmationBlock.addEventListener('click', function() {
      document.getElementById('checkout-section').style.display = 'none';
      homepageContent.style.display = '';
      window.scrollTo({top:0,behavior:'smooth'});
    });
  </script>
  <!-- === ANIMATION & INTERACTION ENHANCEMENTS CONTINUED === -->
  <script>
  // === PAGE LOAD ANIMATION ===
  document.body.classList.add('sb-fadein');
  window.addEventListener('DOMContentLoaded', function() {
    setTimeout(function() {
      document.body.classList.add('sb-loaded');
    }, 80);
  });
  // === SECTION/CONTENT ANIMATIONS ===
  function sbInViewObserver(selector, className = 'sb-inview', rootMargin = '0px 0px -10% 0px') {
    const els = document.querySelectorAll(selector);
    if (!('IntersectionObserver' in window)) {
      els.forEach(el => el.classList.add(className));
      return;
    }
    const obs = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add(className);
          obs.unobserve(entry.target);
        }
      });
    }, { rootMargin });
    els.forEach(el => obs.observe(el));
  }
  window.addEventListener('DOMContentLoaded', function() {
    sbInViewObserver('.navbar');
    sbInViewObserver('.hero');
    sbInViewObserver('.categories');
    sbInViewObserver('.featured');
    sbInViewObserver('footer');
    sbInViewObserver('.footer-contact-minimal');
    sbInViewObserver('.category-card');
    sbInViewObserver('.product-card');
    sbInViewObserver('.info-block');
    sbInViewObserver('.checkout-block');
    sbInViewObserver('.checkout-summary-block');
    sbInViewObserver('.checkout-payment-block');
    sbInViewObserver('.checkout-confirmation-block');
    sbInViewObserver('#all-products-grid .product-card');
    sbInViewObserver('#checkout-section');
    sbInViewObserver('#product-detail-section');
    sbInViewObserver('#all-products-section');
  });
  // === DYNAMICALLY ADD ANIMATION CLASSES ON SECTION SHOW ===
  function sbShowSectionWithAnim(sectionId) {
    var el = document.getElementById(sectionId);
    if (el) {
      el.classList.remove('sb-inview');
      setTimeout(function() { el.classList.add('sb-inview'); }, 10);
    }
  }
  // --- Patch navigation to use smooth transitions ---
  (function() {
    var homepageContent = document.getElementById('homepage-content');
    var productDetailSection = document.getElementById('product-detail-section');
    var allProductsSection = document.getElementById('all-products-section');
    var checkoutSection = document.getElementById('checkout-section');
    // Home link
    document.querySelectorAll('nav a').forEach(link => {
      if (link.textContent.trim().toLowerCase() === 'home') {
        link.addEventListener('click', function(e) {
          setTimeout(function() {
            sbShowSectionWithAnim('homepage-content');
          }, 30);
        });
      }
    });
    // Product card click
    document.querySelectorAll('.product-card').forEach(card => {
      card.addEventListener('click', function() {
        setTimeout(function() {
          sbShowSectionWithAnim('product-detail-section');
        }, 30);
      });
    });
    // Category card click
    document.querySelectorAll('.category-card').forEach(card => {
      card.addEventListener('click', function() {
        setTimeout(function() {
          sbShowSectionWithAnim('all-products-section');
        }, 30);
      });
    });
    // Shop now btn
    var shopNowBtn = document.getElementById('shop-now-btn');
    if (shopNowBtn) {
      shopNowBtn.addEventListener('click', function() {
        setTimeout(function() {
          sbShowSectionWithAnim('all-products-section');
        }, 30);
      });
    }
    // All products back
    var allProductsBack = document.getElementById('all-products-back');
    if (allProductsBack) {
      allProductsBack.addEventListener('click', function() {
        setTimeout(function() {
          sbShowSectionWithAnim('homepage-content');
        }, 30);
      });
    }
    // Product detail back
    var backToHomeBtn = document.getElementById('back-to-home');
    if (backToHomeBtn) {
      backToHomeBtn.addEventListener('click', function() {
        setTimeout(function() {
          sbShowSectionWithAnim('homepage-content');
        }, 30);
      });
    }
    // Mini cart checkout
    var miniCartPanel = document.getElementById('mini-cart-panel');
    if (miniCartPanel) {
      miniCartPanel.addEventListener('click', function(e) {
        if (e.target.classList.contains('mini-cart-checkout-btn')) {
          setTimeout(function() {
            sbShowSectionWithAnim('checkout-section');
          }, 30);
        }
      });
    }
    // Checkout confirmation click
    var checkoutConfirmationBlock = document.getElementById('checkout-confirmation-block');
    if (checkoutConfirmationBlock) {
      checkoutConfirmationBlock.addEventListener('click', function() {
        setTimeout(function() {
          sbShowSectionWithAnim('homepage-content');
        }, 30);
      });
    }
  })();
  // === Animate Cart Badge on Add ===
  (function() {
    var cartBadge = document.getElementById('cart-count-badge');
    var addToCartBtn = document.getElementById('add-to-cart-btn');
    if (addToCartBtn) {
      addToCartBtn.addEventListener('click', function() {
        if (cartBadge) {
          cartBadge.classList.remove('sb-pulse');
          void cartBadge.offsetWidth;
          cartBadge.classList.add('sb-pulse');
          setTimeout(function() { cartBadge.classList.remove('sb-pulse'); }, 700);
        }
      });
    }
  })();
  // === Animate Modal Divider on Show ===
  (function() {
    var modal = document.getElementById('login-modal');
    if (modal) {
      modal.addEventListener('transitionend', function() {
        var dividers = modal.querySelectorAll('.modal-divider');
        dividers.forEach(function(div) {
          div.classList.add('sb-inview');
        });
      });
    }
  })();
  // === Animate Info Blocks on Product Detail Show ===
  (function() {
